              </div>
              <div class="p-5">
                <p class="text-3xl font-bold text-slate-900 mb-1">
                  {job.budget ? `${job.budget} RON` : 'Nespecificat'}
                </p>
                <p class="text-sm text-slate-500">Valoare estimată de client</p>
              </div>
            </div>

            <!-- CTA Card -->
            <div class="bg-white border-2 border-blue-200 rounded-2xl shadow-xl overflow-hidden">
              <div class="p-5 bg-gradient-to-r from-blue-50 to-blue-100 border-b border-blue-200">
                <div class="flex items-center gap-3">
