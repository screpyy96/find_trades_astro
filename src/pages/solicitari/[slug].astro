                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <span>{job.address || job.city || 'Nespecificat'}</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Description card -->
          <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-2xl shadow-xl mb-6">
            <div class="p-6">
              <h2 class="text-xl font-semibold text-slate-900 mb-4 flex items-center gap-2">
                <div class="w-1 h-6 bg-blue-600 rounded-full"></div>
                Descrierea Proiectului
              </h2>
              <div class="prose prose-slate max-w-none text-slate-700 leading-relaxed">
                {job.description.split('\n').map((p: string) => (
                  <p class="mb-3 last:mb-0">{p}</p>
                ))}
              </div>

              <!-- Images Section -->
              {job.images && job.images.length > 0 && (
                <div class="mt-6 pt-6 border-t border-slate-200">
                  <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                    <div class="w-1 h-5 bg-amber-500 rounded-full"></div>
                    Imagini ({job.images.length})
                  </h3>
                  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    {job.images.map((image: string, index: number) => (
                      <div class="group relative aspect-square rounded-xl overflow-hidden bg-slate-100 border border-slate-200 hover:border-slate-300 transition-all duration-200">
                        <img 
                          src={image} 
                          alt={`Imagine ${index + 1} pentru ${job.title}`}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-200"></div>
                        <div class="absolute bottom-2 right-2 bg-white/90 backdrop-blur-sm text-slate-700 text-xs px-2 py-1 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 border border-slate-200">
                          {index + 1} / {job.images.length}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>

          <!-- Details card -->
          <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-2xl shadow-xl">
            <div class="p-6">
              <h2 class="text-xl font-semibold text-slate-900 mb-6 flex items-center gap-2">
                <div class="w-1 h-6 bg-amber-500 rounded-full"></div>
                Detalii Suplimentare
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                {job.tradeType && (
                  <div class="flex items-center gap-3 p-3 bg-slate-100 rounded-xl border border-slate-200">
                    <div class="p-2 bg-blue-600 rounded-lg shadow">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <div>
                      <dt class="text-sm font-medium text-slate-500">Meserie</dt>
                      <dd class="text-slate-900 font-semibold">{job.tradeType}</dd>
