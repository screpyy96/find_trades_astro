---
import Base from '../../layouts/Base.astro';
import { supabase } from '../../lib/supabase';
import type { GetStaticPaths } from 'astro';

export const prerender = true;

export const getStaticPaths: GetStaticPaths = async () => {
  // Check if Supabase is available
  if (!supabase) {
    console.warn('Supabase not configured, skipping job pages generation');
    return [];
  }

  const { data: jobs } = await supabase
    .from('jobs')
    .select('*')
    .order('created_at', { ascending: false })
    .limit(1000); // Limit pentru build time

  if (!jobs) return [];

  return jobs.map((job) => {
    // Generate slug from title and short ID
    const titleSlug = job.title
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-+|-+$/g, '');
    const shortId = job.id.replace(/-/g, '').substring(0, 6);
    const slug = `${titleSlug}-${shortId}`;

    return {
      params: { slug },
      props: { job },
    };
  });
};

interface Props {
  job: any; // Use any for now since we're selecting all fields
}

const { slug } = Astro.params;
const { job: preloadedJob } = Astro.props as Props;

if (!slug) {
  return Astro.redirect('/solicitari');
}

// Extract job ID from slug (last 6 characters)
function extractJobIdFromSlug(slug: string): string | null {
  // Check if it's a full UUID
  const isUuid = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i.test(slug);
  if (isUuid) return slug;
  
  const parts = slug.split('-');
  const shortId = parts[parts.length - 1];
  
  if (!shortId || shortId.length !== 6) return null;
  return shortId;
}

// Find job by short ID
async function findJobByShortId(shortId: string) {
  // Check if it's a full UUID
  const isUuid = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i.test(shortId);
  
  if (isUuid) {
    const { data: job } = await supabase
      .from('jobs')
      .select('*')
      .eq('id', shortId)
      .single();
    return job;
  }
  
  // Query all jobs and find by short ID
  const { data: jobs } = await supabase
    .from('jobs')
    .select('*')
    .limit(200);
  
  if (!jobs) return null;
  
  const job = jobs.find((j: any) => {
    const cleanId = j.id.replace(/-/g, '');
    return cleanId.startsWith(shortId);
  });
  
  return job;
}

// Use preloaded job from getStaticPaths
let job = preloadedJob;

// Fallback for development or if job not found
if (!job && slug) {
  const shortId = extractJobIdFromSlug(String(slug));
  if (!shortId) {
    return Astro.redirect('/solicitari');
  }
  job = await findJobByShortId(shortId);
}

if (!job) {
  return Astro.redirect('/solicitari');
}

// Format date
function formatDate(dateString: string | number): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ro-RO', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

const formattedDate = formatDate(job.created_at);

// Map job types
const jobTypeMap: Record<string, string> = {
  repairs: 'Reparații',
  renovation: 'Renovări',
  installation: 'Instalații',
  maintenance: 'Întreținere',
  other: 'Altele'
};

const projectSizeMap: Record<string, string> = {
  small: 'Mic',
  medium: 'Mediu',
  large: 'Mare'
};

const jobTypeDisplay = job.jobType ? jobTypeMap[job.jobType] || 'Nespecificat' : 'Nespecificat';
const projectSizeDisplay = job.projectSize ? projectSizeMap[job.projectSize] || 'Nespecificat' : 'Nespecificat';

const APP_URL = import.meta.env.PUBLIC_APP_URL || 'https://app.meseriaslocal.ro';
---

<Base 
  title={`${job.title} - ${job.tradeType || 'Lucrare'} | Meserias Local`}
  description={`${job.title}. ${job.description?.substring(0, 150) || 'Vezi detalii și aplică acum.'}`}
>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "JobPosting",
    "title": job.title,
    "description": job.description,
    "datePosted": job.created_at,
    "hiringOrganization": {
      "@type": "Organization",
      "name": "Meserias Local"
    },
    "jobLocation": {
      "@type": "Place",
      "address": {
        "@type": "PostalAddress",
