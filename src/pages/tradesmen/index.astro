---
import Base from '../../layouts/Base.astro';
import { APP_URL } from '~/lib/urls';
import { TradesmenClientList } from '../../components/tradesman/TradesmenClientList.tsx';

const supabaseUrl = import.meta.env.SUPABASE_URL || import.meta.env.PUBLIC_SUPABASE_URL || '';
const supabaseAnonKey = import.meta.env.SUPABASE_ANON_KEY || import.meta.env.PUBLIC_SUPABASE_ANON_KEY || '';
---

<Base 
  title="Find Professional Tradesmen in UK | FindTrades"
  description="Browse and connect with verified tradesmen across the UK. Find electricians, plumbers, builders and more for your project."
>
  <div class="min-h-screen bg-slate-50">
    <!-- Header Section -->
    <div class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center">
          <h1 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">
            Find Professional Tradesmen
          </h1>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            Connect with verified tradesmen across the UK. Browse profiles, check reviews, and get quotes for your project.
          </p>
          
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href={`${APP_URL}/request-quote`}
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-amber-500 text-white font-semibold rounded-lg hover:bg-amber-600 transition-colors text-lg"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Post a Job & Get Quotes
            </a>
            
            <a 
              href={`${APP_URL}/register?type=tradesman`}
              class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-slate-900 text-white font-semibold rounded-lg hover:bg-slate-800 transition-colors text-lg"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Join as a Tradesman
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Popular Categories -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="bg-white rounded-lg p-6 shadow-sm">
        <h2 class="text-lg font-semibold text-slate-900 mb-4">Popular Categories</h2>
        <div class="grid grid-cols-2 sm:grid-cols-4 lg:grid-cols-6 gap-3">
          <a href="/services/electricians" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Electricians
          </a>
          <a href="/services/plumbers" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Plumbers
          </a>
          <a href="/services/carpenters" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Carpenters
          </a>
          <a href="/services/builders" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Builders
          </a>
          <a href="/services/painters" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Painters
          </a>
          <a href="/services/landscapers" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Landscapers
          </a>
          <a href="/services/roofers" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Roofers
          </a>
          <a href="/services/hvac" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            HVAC
          </a>
          <a href="/services/tilers" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Tilers
          </a>
          <a href="/services/plasterers" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Plasterers
          </a>
          <a href="/services/kitchen-fitters" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Kitchen Fitters
          </a>
          <a href="/services/bathroom-fitters" class="text-sm text-slate-600 hover:text-slate-900 px-3 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:border-slate-300 hover:bg-slate-100 transition-colors">
            Bathroom Fitters
          </a>
        </div>
      </div>
    </div>

    <!-- Tradesmen List -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <TradesmenClientList client:load supabaseUrl={supabaseUrl} supabaseAnonKey={supabaseAnonKey} />
    </div>
  </div>
</Base>
