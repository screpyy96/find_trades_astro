---
import Base from '../../../layouts/Base.astro';
import { getAllServicePages } from '../../../lib/sanity';

const servicePages = await getAllServicePages();

// Group by city
const pagesByCity: Record<string, typeof servicePages> = {};
servicePages.forEach((page) => {
  const city = page.citySlug || 'altele';
  if (!pagesByCity[city]) {
    pagesByCity[city] = [];
  }
  pagesByCity[city].push(page);
});

const cities = Object.keys(pagesByCity).sort();
---

<Base 
  title="Ghiduri Complete Servicii - Informații Detaliate | Meserias Local"
  description="Ghiduri complete despre servicii și meseriași în diferite orașe din România. Informații detaliate, prețuri și sfaturi locale."
>
  <!-- Hero Section -->
  <section 
    data-navbar-transparent="true"
    class="relative overflow-hidden py-16 lg:py-20 lg:pt-32"
    style="background: linear-gradient(180deg, #1b1f1d 0%, #21251f 50%, #2a302b 100%)"
  >
    <div class="absolute inset-0 opacity-15">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(45, 51, 45, 0.4) 1px, transparent 1px), linear-gradient(90deg, rgba(45, 51, 45, 0.4) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center space-x-2 text-sm text-slate-300 mb-6">
          <a href="/" class="hover:text-amber-400 transition-colors">Acasă</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/servicii/" class="hover:text-amber-400 transition-colors">Servicii</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-amber-400 font-medium">Ghiduri</span>
        </nav>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 leading-tight">
          Ghiduri Complete Servicii
        </h1>

        <p class="text-lg text-slate-100 leading-relaxed">
          Informații detaliate despre servicii și meseriași în {cities.length} orașe din România
        </p>
      </div>
    </div>
  </section>

  <!-- Guides by City -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {cities.map((city) => (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-slate-900 mb-6 capitalize">
            {city.replace(/-/g, ' ')}
            <span class="text-sm font-normal text-slate-500 ml-2">
              ({pagesByCity[city].length} ghiduri)
            </span>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {pagesByCity[city].map((page) => (
              <a
                href={`/servicii/${page.slug.current}/`}
                class="group bg-white border border-slate-200 rounded-xl p-6 hover:shadow-lg transition-all duration-300"
              >
                <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-700 mb-2">
                  {page.heroTitle || page.title}
                </h3>
                {page.heroDescription && (
                  <p class="text-sm text-slate-600 mb-4 line-clamp-3">
                    {page.heroDescription}
                  </p>
                )}
                <div class="flex items-center gap-2 text-xs text-slate-500">
                  <span class="px-2 py-1 bg-blue-100 text-blue-700 rounded">
                    {page.tradeSlug}
                  </span>
                  <span>•</span>
                  <span>{new Date(page.publishedAt || '').toLocaleDateString('ro-RO')}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-slate-900 mb-4">
        Ai nevoie de un meseriaș?
      </h2>
      <p class="text-slate-600 mb-8">
        Primește oferte gratuite de la meseriași verificați în orașul tău
      </p>
      <a
        href="/cere-oferta"
        class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
      >
        Cere ofertă gratuită
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
</Base>
