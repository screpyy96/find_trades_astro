    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Servicii',
      item: 'https://www.meseriaslocal.ro/servicii'
    },
    {
      '@type': 'ListItem',
      position: 3,
      name: service.category,
      item: `https://www.meseriaslocal.ro/servicii/${categorie}`
    },
    {
      '@type': 'ListItem',
      position: 4,
      name: service.name,
      item: `https://www.meseriaslocal.ro/servicii/${categorie}/${serviciu}`
    },
    {
      '@type': 'ListItem',
      position: 5,
      name: city.name,
      item: canonical
    }
  ]
};

---

