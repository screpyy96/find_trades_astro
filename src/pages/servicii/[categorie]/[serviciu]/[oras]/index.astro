};

const faqSchema = buildFaqSchema(sanityContent?.faqSection);

// Breadcrumb schema
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  name: `${service.name} ${city.name} - Breadcrumb Navigation`,
  itemListElement: [
    {
