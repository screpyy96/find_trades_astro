      .replace(/[^a-z0-9-]/g, '')
      .replace(/-+/g, '-');  // Replace multiple dashes with single dash
    
    paths.push({
      params: {
        categorie: categorySlug,
        serviciu: trade.slug,
      },
      props: {
        trade,
      },
    });
  }
  
  return paths;
}

