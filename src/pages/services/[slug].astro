---
import Base from '../../layouts/Base.astro';
import { trades, type Trade } from '../../data/trades';
import { cities } from '../../data/cities';
import { supabase } from '../../lib/supabase';
import { generateServicePageSchema } from '../../lib/schema';
import { validateEnvironment } from '../../lib/env-validation';
import type { GetStaticPaths } from 'astro';

// Use environment variables from .env
const envConfig = validateEnvironment();
const APP_URL = envConfig.config.app.url;
const WEB_URL = envConfig.config.web.url;

export const prerender = true;

export const getStaticPaths: GetStaticPaths = async () => {
  const paths = trades.map((trade) => ({
    params: { slug: trade.slug },
    props: { trade }
  }));
  
  return paths;
};

interface Props {
  trade: Trade;
}

const { trade } = Astro.props;

// Fetch real stats for this specific trade
let tradeStats = {
  totalWorkers: 0,
  totalCities: 0,
  avgRating: 0,
  recentProjects: 0
};

if (supabase) {
  try {
    // Get workers for this specific trade
    const { data: tradeWorkers } = await supabase
      .from('worker_trades')
      .select('worker_id')
      .eq('trade_id', trade.id);

    if (tradeWorkers && tradeWorkers.length > 0) {
      const workerIds = tradeWorkers.map(wt => wt.worker_id);
      
      // Get verified workers with their profiles
      const { data: workerProfiles } = await supabase
        .from('profiles')
        .select('id, rating, address, is_verified')
        .eq('role', 'worker')
        .eq('is_verified', true)
        .in('id', workerIds);

      if (workerProfiles) {
        const citiesSet = new Set();
        let totalRating = 0;
        let ratedWorkers = 0;

        workerProfiles.forEach(worker => {
          // Extract city from address
          if (worker.address) {
            const addressParts = worker.address.split(',');
            if (addressParts.length > 0) {
              const city = addressParts[addressParts.length - 1].trim();
              if (city && city.length > 2) {
                citiesSet.add(city);
              }
            }
          }

          // Calculate average rating
          if (worker.rating && worker.rating > 0) {
            totalRating += worker.rating;
            ratedWorkers++;
          }
        });

        tradeStats = {
          totalWorkers: workerProfiles.length,
          totalCities: citiesSet.size,
          avgRating: ratedWorkers > 0 ? totalRating / ratedWorkers : 0,
          recentProjects: Math.floor(workerProfiles.length * 3.2) // Estimated recent projects
        };
      }
    }
  } catch (error) {
    console.error('‚ùå Error fetching trade stats:', error);
  }
}

// Generate structured data for SEO
const schemaData = generateServicePageSchema(trade, tradeStats);

// SEO metadata - Enhanced for Electrician
const title = trade.name === "Electrician" 
  ? "Electrician Services UK | 24/7 Emergency Electricians | Find Verified Electricians | FindTrades"
  : `${trade.name} Services UK | Find Professional ${trade.name} | FindTrades`;

const description = trade.name === "Electrician"
  ? `Find certified electricians across the UK. ${tradeStats.totalWorkers}+ verified electricians available for emergency repairs, installations & testing. Fast response, free quotes, NICEIC approved. Book your electrician today!`
  : `Find verified ${trade.name.toLowerCase()} professionals across the UK. ${tradeStats.totalWorkers}+ expert ${trade.name.toLowerCase()}s available in ${tradeStats.totalCities}+ cities. Get free quotes for your ${trade.name.toLowerCase()} project today.`;
const canonical = `https://www.findtrades.app/services/${trade.slug}`;

// Related services (same category)
const relatedServices = trades.filter(t => 
  t.category === trade.category && 
  t.id !== trade.id
).slice(0, 6);

// Popular cities for this service
const popularCities = cities.slice(0, 12);
---

<Base 
  title={title}
  description={description}
  canonical={canonical}
>
  <script type="application/ld+json" set:html={JSON.stringify(schemaData)} slot="head" />

  <!-- Hero Section -->
  <section class="w-full bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white" data-navbar-transparent="true">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-24">
      <div class="text-center max-w-4xl mx-auto">
        <div class="mb-6">
          <div class="w-20 h-20 mx-auto rounded-2xl bg-gradient-to-br from-amber-500 to-amber-600 text-white flex items-center justify-center text-3xl font-bold">
            {trade.name.charAt(0).toUpperCase()}
          </div>
        </div>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
          Professional {trade.name}
          <span class="block text-amber-400">Services in the UK</span>
        </h1>
        <p class="text-xl sm:text-2xl text-slate-300 mb-8 leading-relaxed">
          Connect with {tradeStats.totalWorkers}+ verified {trade.name.toLowerCase()} professionals across {tradeStats.totalCities}+ UK cities. 
          Quality workmanship, competitive prices, and guaranteed satisfaction.
        </p>
        
        <!-- Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">{tradeStats.totalWorkers}+</div>
            <div class="text-slate-400 text-sm">Verified Professionals</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">{tradeStats.totalCities}+</div>
            <div class="text-slate-400 text-sm">UK Cities</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">{tradeStats.recentProjects}+</div>
            <div class="text-slate-400 text-sm">Recent Projects</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-amber-400">{tradeStats.avgRating.toFixed(1)}</div>
            <div class="text-slate-400 text-sm">Average Rating</div>
          </div>
        </div>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`${APP_URL}/request-quote`}
            class="inline-flex items-center gap-3 px-8 py-4 rounded-full bg-gradient-to-r from-amber-500 to-amber-600 text-white font-bold text-lg transition-all duration-300 hover:from-amber-600 hover:to-amber-700 hover:shadow-lg hover:shadow-amber-500/25 transform hover:scale-105"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
            Get {trade.name} Quotes
          </a>
        </div>
      </div>
    </div>
  </section>

