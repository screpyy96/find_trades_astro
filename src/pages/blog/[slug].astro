---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;

// Fetch the blog post by slug (SSR mode — no getStaticPaths)
const posts = await getCollection('blog', ({ data }) => {
  return data.publishDate <= new Date();
});

const post = posts.find((p) => p.slug === slug);

if (!post) {
  return Astro.redirect('/blog/', 302);
}

const { Content } = await post.render();

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "description": post.data.description,
  "image": post.data.image ? `https://www.findtrades.app${post.data.image}` : undefined,
  "datePublished": post.data.publishDate.toISOString(),
  "dateModified": post.data.publishDate.toISOString(),
  "author": {
    "@type": "Person",
    "name": post.data.author,
  },
  "publisher": {
    "@type": "Organization",
    "name": "FindTrades",
    "logo": {
      "@type": "ImageObject",
      "url": "https://www.findtrades.app/logo.svg",
    },
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://www.findtrades.app/blog/${post.slug}/`,
  },
};

const seoTitle = post.data.seo?.title || post.data.title;
const seoDescription = post.data.seo?.description || post.data.description;
---

<Base 
  title={seoTitle}
  description={seoDescription}
  ogImage={post.data.image}
>

  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Hero Section -->
  <section class="relative overflow-hidden py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-slate-100">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(45, 51, 45, 0.4) 1px, transparent 1px), linear-gradient(90deg, rgba(45, 51, 45, 0.4) 1px, transparent 1px); background-size: 60px 60px"></div>
    </div>

    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex mb-8">
        <ol class="flex items-center space-x-2 text-sm text-slate-600">
          <li><a href="/" class="hover:text-slate-900 transition-colors">Home</a></li>
          <li><span class="mx-2">›</span></li>
          <li><a href="/blog/" class="hover:text-slate-900 transition-colors">Blog</a></li>
          <li><span class="mx-2">›</span></li>
          <li class="text-orange-600 font-medium">{post.data.category}</li>
        </ol>
      </nav>

      <div class="text-center">
        <div class="flex items-center justify-center gap-3 mb-6">
          <span class="px-4 py-2 bg-orange-100 text-orange-700 text-sm font-semibold rounded-full">
            {post.data.category}
          </span>
          {post.data.featured && (
            <span class="px-4 py-2 bg-amber-100 text-amber-700 text-sm font-semibold rounded-full">
              ⭐ Featured
            </span>
          )}
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 leading-tight">
          {post.data.title}
        </h1>

        <p class="text-xl text-slate-600 mb-8 max-w-3xl mx-auto leading-relaxed">
          {post.data.description}
        </p>

        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-slate-500">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-br from-orange-400 to-amber-500 rounded-full flex items-center justify-center text-white font-semibold text-xs">
              {post.data.author.charAt(0).toUpperCase()}
            </div>
            <span>By {post.data.author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={post.data.publishDate.toISOString()}>
              {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>5 min read</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Image -->
  {post.data.image && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8">
      <div class="rounded-2xl overflow-hidden shadow-2xl">
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="w-full h-[400px] object-cover"
          loading="eager"
        />
      </div>
    </section>
  )}

  <!-- Article Content -->
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="prose prose-lg prose-slate max-w-none">
      <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12">
        <Content />
      </div>
    </div>

    <!-- Tags -->
    {post.data.tags && post.data.tags.length > 0 && (
      <div class="mt-12">
        <h3 class="text-lg font-semibold text-slate-900 mb-4">Tags</h3>
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag: string) => (
            <span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm rounded-full hover:bg-slate-200 transition-colors">
              #{tag}
            </span>
          ))}
        </div>
      </div>
    )}
  </article>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-orange-500 to-amber-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Need Professional Help?
      </h2>
      <p class="text-xl text-white/90 mb-8">
        Connect with verified tradesmen in your area and get multiple quotes for your project.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/tradesmen/" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-orange-600 font-bold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <span class="mr-2">Find Tradesmen</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a 
          href="/request-quote" 
          class="inline-flex items-center justify-center px-8 py-4 bg-slate-800 text-white font-bold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
        >
          <span class="mr-2">Request Quote</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</Base>

<style>
  .prose {
    @apply text-slate-700 leading-relaxed;
  }
  
  .prose h1 {
    @apply text-3xl font-bold text-slate-900 mt-8 mb-4 first:mt-0;
  }
  
  .prose h2 {
    @apply text-2xl font-bold text-slate-900 mt-8 mb-4;
  }
  
  .prose h3 {
    @apply text-xl font-bold text-slate-900 mt-6 mb-3;
  }
  
  .prose p {
    @apply mb-4;
  }
  
  .prose ul {
    @apply list-disc list-inside mb-4 space-y-2;
  }
  
  .prose ol {
    @apply list-decimal list-inside mb-4 space-y-2;
  }
  
  .prose li {
    @apply ml-2;
  }
  
  .prose strong {
    @apply font-bold text-slate-900;
  }
  
  .prose a {
    @apply text-orange-600 hover:text-orange-700 underline font-medium;
  }
  
  .prose blockquote {
    @apply border-l-4 border-orange-400 pl-4 py-2 my-4 bg-orange-50 text-slate-700 italic;
  }
  
  .prose code {
    @apply bg-slate-100 text-slate-800 px-2 py-1 rounded text-sm font-mono;
  }
  
  .prose pre {
    @apply bg-slate-900 text-slate-100 p-4 rounded-lg overflow-x-auto my-4;
  }
  
  .prose pre code {
    @apply bg-transparent text-inherit p-0;
  }
</style>
