---
import Base from '../../../layouts/Base.astro';
import { getBlogPostsByCategory, getBlogCategoryBySlug, getImageUrl } from '../../../lib/sanity';

export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/blog', 404);
}

const category = await getBlogCategoryBySlug(slug);

if (!category) {
  return Astro.redirect('/blog', 404);
}

const posts = await getBlogPostsByCategory(category.slug.current);
---

<Base 
  title={`${category.name} - Blog Meserias Local`}
  description={category.description || `Articole despre ${category.name.toLowerCase()}`}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-purple-900 py-16 lg:py-20">
    <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center space-x-2 text-sm text-slate-300 mb-6">
          <a href="/" class="hover:text-amber-400 transition-colors">Acasă</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/blog/" class="hover:text-amber-400 transition-colors">Blog</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-amber-400 font-medium">{category.name}</span>
        </nav>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 leading-tight">
          {category.name}
        </h1>

        {category.description && (
          <p class="text-lg text-slate-300 mb-8 leading-relaxed">
            {category.description}
          </p>
        )}

        <p class="text-slate-400">
          {posts.length} {posts.length === 1 ? 'articol' : 'articole'}
        </p>
      </div>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => {
            const imageUrl = post.featuredImage ? getImageUrl(post.featuredImage) : null;
            return (
              <article class="group bg-white border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300">
                {imageUrl && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={imageUrl}
                      alt={post.featuredImage?.alt || post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-700 mb-2 line-clamp-2">
                    <a href={`/blog/${post.slug.current}/`}>{post.title}</a>
                  </h3>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 text-xs text-slate-500">
                      <span>{new Date(post.publishedAt).toLocaleDateString('ro-RO')}</span>
                      {post.readingTime && (
                        <>
                          <span>•</span>
                          <span>{post.readingTime} min</span>
                        </>
                      )}
                    </div>
                    <a
                      href={`/blog/${post.slug.current}/`}
                      class="text-blue-600 hover:text-blue-700 text-sm font-semibold"
                    >
                      Citește →
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="bg-white border border-slate-200 rounded-lg p-8 text-center">
          <p class="text-slate-600">Nu există articole în această categorie momentan.</p>
          <a
            href="/blog/"
            class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-semibold"
          >
            Vezi toate articolele →
          </a>
        </div>
      )}
    </div>
  </section>
</Base>
