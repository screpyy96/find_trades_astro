---
import Base from '../../layouts/Base.astro';
import { getAllBlogPosts, getAllBlogCategories, getImageUrl } from '../../lib/sanity';

export const prerender = false;

const posts = await getAllBlogPosts();
const categories = await getAllBlogCategories();

const featuredPosts = posts.filter(p => p.isFeatured).slice(0, 3);
const recentPosts = posts.slice(0, 12);
---

<Base 
  title="Blog - Sfaturi și Ghiduri pentru Renovări | Meserias Local"
  description="Articole utile despre renovări, reparații, sfaturi pentru meseriași și clienți. Ghiduri complete pentru proiectele tale."
>
  <!-- Modern Hero Section -->
  <section 
    class="relative overflow-hidden py-16 lg:py-24"
    style="background: linear-gradient(180deg, #1b1f1d 0%, #21251f 50%, #2a302b 100%)"
  >
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-15">
      <div
        class="absolute inset-0"
        style="background-image: linear-gradient(rgba(45, 51, 45, 0.4) 1px, transparent 1px), linear-gradient(90deg, rgba(45, 51, 45, 0.4) 1px, transparent 1px); background-size: 60px 60px"
      ></div>
    </div>

    <!-- Floating geometric shapes -->
    <div class="absolute inset-0 opacity-15">
      <div class="absolute top-24 left-40 w-14 h-14 border-2 border-blue-400/30 rounded-full animate-pulse" style="animation-delay: 0.5s"></div>
      <div class="absolute top-48 left-20 w-10 h-10 bg-emerald-400/15 rounded-full animate-bounce" style="animation-delay: 1s"></div>
      <div class="absolute top-20 right-28 w-16 h-16 border-2 border-purple-400/30 rounded-full animate-pulse" style="animation-delay: 1.5s"></div>
      <div class="absolute top-52 right-16 w-12 h-12 bg-blue-400/15 rounded-full animate-bounce" style="animation-delay: 2s"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex justify-center mb-6">
          <div class="bg-slate-800/40 backdrop-blur-md rounded-full px-4 py-2 border border-slate-700/50">
            <ol class="flex items-center space-x-2 text-slate-300 text-xs font-medium">
              <li class="flex items-center">
                <a href="/" class="hover:text-white transition-colors">Acasă</a>
              </li>
              <li class="flex items-center">
                <span class="mx-2 text-white/40">›</span>
                <span class="text-orange-400 font-semibold">Blog</span>
              </li>
            </ol>
          </div>
        </nav>

        <!-- Main Heading -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 leading-tight">
          Blog Meserias Local
        </h1>

        <p class="text-xl text-slate-300 mb-8 leading-relaxed max-w-3xl mx-auto">
          Sfaturi practice, ghiduri complete și informații utile pentru proiectele tale de renovare și construcție
        </p>

        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="text"
              id="blog-search"
              placeholder="Caută articole..."
              class="w-full px-6 py-4 pr-12 rounded-xl bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all"
            />
            <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>

        <!-- Category Filters -->
        {categories.length > 0 && (
          <div class="mt-6 flex flex-wrap items-center justify-center gap-2">
            <button
              data-category="all"
              class="category-filter px-4 py-2 text-sm font-medium rounded-lg transition-all bg-white/20 backdrop-blur-md border border-white/30 text-white"
            >
              Toate
            </button>
            {categories.map((category) => (
              <button
                data-category={category.slug.current}
                class="category-filter px-4 py-2 text-sm font-medium rounded-lg transition-all bg-white/10 backdrop-blur-md border border-white/20 text-white/80 hover:bg-white/20 hover:text-white"
              >
                {category.name}
                {category.postCount !== undefined && (
                  <span class="ml-1.5 text-xs opacity-60">({category.postCount})</span>
                )}
              </button>
            ))}
          </div>
        )}

        <!-- Stats -->
        <div class="mt-6 flex items-center justify-center gap-8 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
            <span class="text-slate-300">{posts.length} articole</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
            <span class="text-slate-300">{categories.length} categorii</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section id="featured-section" class="py-16 bg-gradient-to-b from-white to-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-10">
          <div>
            <h2 class="text-3xl font-bold text-slate-900 mb-2">Articole Recomandate</h2>
            <p class="text-slate-600">Cele mai populare și utile articole</p>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredPosts.map((post) => {
            const imageUrl = post.featuredImage ? getImageUrl(post.featuredImage) : null;
            return (
              <a
                href={`/blog/${post.slug.current}/`}
                class="group bg-white border-2 border-slate-200 rounded-2xl overflow-hidden hover:border-blue-400 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1"
              >
                {imageUrl && (
                  <div class="aspect-video overflow-hidden bg-slate-100">
                    <img
                      src={imageUrl}
                      alt={post.featuredImage?.alt || post.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                  </div>
                )}
                <div class="p-6">
                  {post.category && (
                    <span class="inline-block px-3 py-1.5 bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-700 text-xs font-bold rounded-full mb-3">
                      {post.category.name}
                    </span>
                  )}
                  <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-700 mb-3 line-clamp-2 leading-tight">
                    {post.title}
                  </h3>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-3 leading-relaxed">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                    <div class="flex items-center gap-3 text-xs text-slate-500">
                      <span class="flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {new Date(post.publishedAt).toLocaleDateString('ro-RO', { day: 'numeric', month: 'short' })}
                      </span>
                      {post.readingTime && (
                        <span class="flex items-center gap-1">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                          </svg>
                          {post.readingTime} min
                        </span>
                      )}
                    </div>
                    <span class="text-blue-600 group-hover:text-blue-700 font-semibold text-sm flex items-center gap-1">
                      Citește
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}



  <!-- All Posts -->
  <section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div id="section-header" class="flex items-center justify-between mb-10">
        <div>
          <h2 id="section-title" class="text-3xl font-bold text-slate-900 mb-2">Toate Articolele</h2>
          <p id="section-description" class="text-slate-600">Descoperă toate ghidurile și sfaturile noastre</p>
        </div>
      </div>
      
      {recentPosts.length > 0 ? (
        <div id="posts-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {recentPosts.map((post) => {
            const imageUrl = post.featuredImage ? getImageUrl(post.featuredImage) : null;
            return (
              <article 
                class="post-card group bg-white border border-slate-200 rounded-xl overflow-hidden hover:border-blue-300 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
                data-title={post.title.toLowerCase()}
                data-excerpt={post.excerpt?.toLowerCase() || ''}
                data-category={post.category?.slug?.current || ''}
              >
                <a href={`/blog/${post.slug.current}/`} class="block">
                  {imageUrl && (
                    <div class="aspect-video overflow-hidden bg-slate-100">
                      <img
                        src={imageUrl}
                        alt={post.featuredImage?.alt || post.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        loading="lazy"
                      />
                    </div>
                  )}
                  <div class="p-6">
                    {post.category && (
                      <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-xs font-bold rounded-full mb-3">
                        {post.category.name}
                      </span>
                    )}
                    <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-700 mb-2 line-clamp-2 leading-tight">
                      {post.title}
                    </h3>
                    <p class="text-slate-600 text-sm mb-4 line-clamp-3 leading-relaxed">
                      {post.excerpt}
                    </p>
                    <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                      <div class="flex items-center gap-3 text-xs text-slate-500">
                        <span class="flex items-center gap-1">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                          {new Date(post.publishedAt).toLocaleDateString('ro-RO', { day: 'numeric', month: 'short' })}
                        </span>
                        {post.readingTime && (
                          <span class="flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {post.readingTime} min
                          </span>
                        )}
                      </div>
                      <span class="text-blue-600 group-hover:text-blue-700 font-semibold text-sm flex items-center gap-1">
                        Citește
                        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border-2 border-blue-200 rounded-2xl p-12 text-center">
          <div class="max-w-md mx-auto">
            <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">Articole în curând</h3>
            <p class="text-slate-700 mb-8 leading-relaxed">
              Lucrăm la conținut util pentru tine. Revino în curând pentru articole despre renovări, 
              sfaturi pentru meseriași și multe altele.
            </p>
            <a 
              href="/"
              class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Înapoi la Homepage
            </a>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Search and Filter Script -->
  <script>
    const searchInput = document.getElementById('blog-search') as HTMLInputElement;
    const postCards = document.querySelectorAll('.post-card');
    const categoryFilters = document.querySelectorAll('.category-filter');
    const featuredSection = document.getElementById('featured-section') as HTMLElement;
    const sectionTitle = document.getElementById('section-title') as HTMLElement;
    const sectionDescription = document.getElementById('section-description') as HTMLElement;
    
    let activeCategory = 'all';
    let searchTerm = '';

    function filterPosts() {
      postCards.forEach((card) => {
        const title = card.getAttribute('data-title') || '';
        const excerpt = card.getAttribute('data-excerpt') || '';
        const category = card.getAttribute('data-category') || '';
        
        // Check search match
        const searchMatch = searchTerm === '' || 
                           title.includes(searchTerm) || 
                           excerpt.includes(searchTerm) || 
                           category.includes(searchTerm);
        
        // Check category match
        const categoryMatch = activeCategory === 'all' || category === activeCategory;
        
        // Show only if both match
        if (searchMatch && categoryMatch) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    function updateUIForCategory(category: string) {
      // Show/hide featured section based on category
      if (featuredSection) {
        if (category === 'all' && searchTerm === '') {
          featuredSection.style.display = 'block';
        } else {
          featuredSection.style.display = 'none';
        }
      }

      // Update section title and description
      if (category === 'all') {
        if (sectionTitle) sectionTitle.textContent = 'Toate Articolele';
        if (sectionDescription) sectionDescription.textContent = 'Descoperă toate ghidurile și sfaturile noastre';
      } else {
        // Find category name from button
        const activeButton = document.querySelector(`[data-category="${category}"]`);
        const categoryName = activeButton?.textContent?.replace(/\(\d+\)/, '').trim() || category;
        if (sectionTitle) sectionTitle.textContent = `Articole din categoria: ${categoryName}`;
        if (sectionDescription) sectionDescription.textContent = `Toate articolele despre ${categoryName.toLowerCase()}`;
      }
    }

    function updateButtonStyles(selectedCategory: string) {
      categoryFilters.forEach((btn) => {
        const btnCategory = btn.getAttribute('data-category');
        const isActive = btnCategory === selectedCategory;
        
        // Remove all possible classes first
        btn.classList.remove(
          'bg-white/10', 'bg-white/20',
          'text-white/80', 'text-white',
          'hover:bg-white/20',
          'border-white/30', 'border-white/20'
        );
        
        if (isActive) {
          // Hero section active button
          btn.classList.add('bg-white/20', 'border-white/30', 'text-white');
        } else {
          // Hero section inactive button
          btn.classList.add('bg-white/10', 'border-white/20', 'text-white/80', 'hover:bg-white/20');
        }
      });
    }

    // Search functionality
    if (searchInput && postCards.length > 0) {
      searchInput.addEventListener('input', (e) => {
        searchTerm = (e.target as HTMLInputElement).value.toLowerCase().trim();
        
        // Hide featured section when searching
        if (featuredSection) {
          featuredSection.style.display = searchTerm ? 'none' : (activeCategory === 'all' ? 'block' : 'none');
        }
        
        filterPosts();
      });
    }

    // Category filter functionality
    categoryFilters.forEach((filter) => {
      filter.addEventListener('click', () => {
        const category = filter.getAttribute('data-category') || 'all';
        activeCategory = category;
        
        // Update button styles
        updateButtonStyles(category);
        
        // Update UI (featured section visibility and titles)
        updateUIForCategory(category);
        
        // Filter posts
        filterPosts();
      });
    });
  </script>
</Base>
