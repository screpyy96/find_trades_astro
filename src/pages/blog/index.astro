---
import Base from '../../layouts/Base.astro';
import PageHero from '../../components/hero/PageHero.astro';
import { getAllBlogPosts, getAllBlogCategories, getImageUrl } from '../../lib/sanity';

const posts = await getAllBlogPosts();
const categories = await getAllBlogCategories();

const featuredPosts = posts.filter(p => p.isFeatured).slice(0, 3);
const recentPosts = posts.slice(0, 9);
---

<Base 
  title="Blog - Sfaturi și Ghiduri pentru Renovări | Meserias Local"
  description="Articole utile despre renovări, reparații, sfaturi pentru meseriași și clienți. Ghiduri complete pentru proiectele tale."
>
  <PageHero 
    title="Blog Meserias Local"
    description="Sfaturi practice, ghiduri complete și informații utile pentru proiectele tale"
  />

  <!-- Featured Posts -->
  {featuredPosts.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-slate-900 mb-8">Articole Recomandate</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {featuredPosts.map((post) => {
            const imageUrl = post.featuredImage ? getImageUrl(post.featuredImage) : null;
            return (
              <a
                href={`/blog/${post.slug.current}/`}
                class="group bg-white border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300"
              >
                {imageUrl && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={imageUrl}
                      alt={post.featuredImage?.alt || post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  {post.category && (
                    <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full mb-3">
                      {post.category.name}
                    </span>
                  )}
                  <h3 class="text-xl font-bold text-slate-900 group-hover:text-blue-700 mb-2 line-clamp-2">
                    {post.title}
                  </h3>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center gap-4 text-xs text-slate-500">
                    <span>{new Date(post.publishedAt).toLocaleDateString('ro-RO')}</span>
                    {post.readingTime && (
                      <>
                        <span>•</span>
                        <span>{post.readingTime} min citire</span>
                      </>
                    )}
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-slate-900 mb-8">Categorii</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {categories.map((category) => (
            <a
              href={`/blog/categorie/${category.slug.current}/`}
              class="bg-white border border-slate-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-md transition-all"
            >
              <h3 class="font-semibold text-slate-900 mb-1">{category.name}</h3>
              {category.postCount !== undefined && (
                <p class="text-sm text-slate-500">{category.postCount} articole</p>
              )}
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Posts -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-slate-900 mb-8">Toate Articolele</h2>
      
      {recentPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recentPosts.map((post) => {
            const imageUrl = post.featuredImage ? getImageUrl(post.featuredImage) : null;
            return (
              <article class="group bg-white border border-slate-200 rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300">
                {imageUrl && (
                  <div class="aspect-video overflow-hidden">
                    <img
                      src={imageUrl}
                      alt={post.featuredImage?.alt || post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  {post.category && (
                    <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full mb-3">
                      {post.category.name}
                    </span>
                  )}
                  <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-700 mb-2 line-clamp-2">
                    <a href={`/blog/${post.slug.current}/`}>{post.title}</a>
                  </h3>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 text-xs text-slate-500">
                      <span>{new Date(post.publishedAt).toLocaleDateString('ro-RO')}</span>
                      {post.readingTime && (
                        <>
                          <span>•</span>
                          <span>{post.readingTime} min</span>
                        </>
                      )}
                    </div>
                    <a
                      href={`/blog/${post.slug.current}/`}
                      class="text-blue-600 hover:text-blue-700 text-sm font-semibold"
                    >
                      Citește →
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 text-center">
          <h3 class="text-xl font-semibold mb-4">Articole în curând</h3>
          <p class="text-slate-700 mb-6">
            Lucrăm la conținut util pentru tine. Revino în curând pentru articole despre renovări, 
            sfaturi pentru meseriași și multe altele.
          </p>
          <a 
            href="/"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
          >
            Înapoi la Homepage
          </a>
        </div>
      )}
    </div>
  </section>
</Base>
