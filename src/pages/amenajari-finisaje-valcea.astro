---
import Base from '../layouts/Base.astro';
import { RecommendedTradesmen } from '../components/tradesman/RecommendedTradesmen';
import { getPublicSupabaseConfig } from '../lib/publicEnv';

const { url: supabaseUrl, anonKey: supabaseAnonKey } = getPublicSupabaseConfig();
const APP_URL = 'https://app.meseriaslocal.ro';

// SEO optimizat
const title = "Amenajari Interioare Valcea | Finisaje, Balcoane, Jaluzele 2026";
const description = "Amenajari interioare Valcea: finisaje balcoane, montaj jaluzele si rulouri, scari exterioare. Echipa completa constructii Ramnicu Valcea. De la fundatie la finisaje, preturi corecte.";
const canonical = "https://www.meseriaslocal.ro/amenajari-finisaje-valcea";

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${canonical}#localbusiness`,
  "name": "Amenajari Interioare Valcea | Meserias Local",
  "description": description,
  "url": canonical,
  "telephone": "+447930097259",
  "areaServed": [
    { "@type": "City", "name": "Ramnicu Valcea" },
    { "@type": "AdministrativeArea", "name": "Valcea" }
  ],
  "address": { "@type": "PostalAddress", "streetAddress": "Platforma Online", "addressLocality": "Ramnicu Valcea", "addressRegion": "Valcea", "postalCode": "240001", "addressCountry": "RO" },
  "priceRange": "$$",
  "image": "https://www.meseriaslocal.ro/logo.svg"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    { 
      "@type": "Question", 
      "name": "Cat costa inchiderea unui balcon in Valcea?",
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Pretul inchiderii unui balcon in Valcea variaza intre 200-400 euro/mp, in functie de tipul tamplariei (PVC, aluminiu), geam (dublu, triplu), si finisajele interioare. Un balcon standard de 4-6 mp costa 1000-2500 euro complet finisat."
      }
    },
    {
      "@type": "Question",
      "name": "Ce servicii de amenajari interioare oferiti?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Oferim servicii complete: finisare balcoane si logii, montaj jaluzele si rulouri, scari interioare si exterioare, montaj parchet, gresie, faianta, rigips, zugraveli, instalatii electrice si sanitare. Echipa completa de la fundatie la finisaje."
      }
    },
    {
      "@type": "Question",
      "name": "Lucrati si in afara orasului Ramnicu Valcea?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Da, acoperim tot judetul Valcea: Dragasani, Babeni, Calimanesti, Brezoi, Horezu, Baile Olanesti, Baile Govora si toate localitatile din judet. Deplasare gratuita pentru evaluare."
      }
    }
  ]
};


const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Acasa", "item": "https://www.meseriaslocal.ro" },
    { "@type": "ListItem", "position": 2, "name": "Servicii", "item": "https://www.meseriaslocal.ro/servicii" },
    { "@type": "ListItem", "position": 3, "name": "Amenajari Valcea", "item": canonical }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Amenajari Interioare si Finisaje Valcea",
  "description": "Servicii complete amenajari interioare, finisaje balcoane, montaj jaluzele, constructii in judetul Valcea",
  "provider": { "@type": "LocalBusiness", "@id": `${canonical}#localbusiness` },
  "areaServed": [{ "@type": "City", "name": "Ramnicu Valcea" }, { "@type": "AdministrativeArea", "name": "Valcea" }],
  "serviceType": ["Finisare balcoane", "Montaj jaluzele", "Montaj rulouri", "Scari exterioare", "Amenajari interioare", "Constructii"],
  "url": canonical
};

const services = [
  { name: "Finisare balcoane si logii", price: "150-300 lei/mp", desc: "Inchidere, izolare, finisaje complete" },
  { name: "Montaj jaluzele interioare", price: "30-80 lei/buc", desc: "Orizontale, verticale, plisse" },
  { name: "Montaj rulouri exterioare", price: "150-400 lei/buc", desc: "PVC, aluminiu, electrice" },
  { name: "Scari exterioare", price: "200-500 lei/treapta", desc: "Beton, metal, lemn" },
  { name: "Montaj parchet", price: "20-35 lei/mp", desc: "Laminat, vinil, SPC" },
  { name: "Montaj gresie/faianta", price: "35-60 lei/mp", desc: "Baie, bucatarie, living" },
  { name: "Rigips si compartimentari", price: "45-70 lei/mp", desc: "Pereti, tavane, nise" },
  { name: "Zugraveli si vopsitorii", price: "15-25 lei/mp", desc: "Lavabil, decorativ" }
];

const zones = [
  "Ramnicu Valcea", "Dragasani", "Babeni", "Calimanesti", "Brezoi", "Horezu",
  "Baile Olanesti", "Baile Govora", "Ocnele Mari", "Berbesti", "Balcesti", "Ladesti",
  "Pausesti-Maglasi", "Budesti", "Vladesti", "Golesti", "Mihaesti", "Daesti"
];
---

<Base title={title} description={description} canonical={canonical} disableDefaultBreadcrumb={true}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(faqSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(serviceSchema)} is:inline></script>
  
  <meta slot="head" name="keywords" content="amenajari interioare valcea, finisaje valcea, finisare balcon valcea, inchidere balcon valcea, montaj jaluzele valcea, montaj rulouri valcea, jaluzele ramnicu valcea, rulouri exterioare valcea, scari exterioare valcea, amenajari ramnicu valcea, renovari valcea, constructii valcea, firma amenajari valcea, meserias finisaje valcea, zugraveli valcea, rigips valcea, gresie faianta valcea, montaj parchet valcea, amenajari dragasani, finisaje babeni, constructii horezu, renovari calimanesti" />
