---
import Base from '../layouts/Base.astro';
import { RecommendedTradesmen } from '../components/tradesman/RecommendedTradesmen';
import { getPublicSupabaseConfig } from '../lib/publicEnv';

const { url: supabaseUrl, anonKey: supabaseAnonKey } = getPublicSupabaseConfig();
const APP_URL = 'https://app.meseriaslocal.ro';

const title = "Renovari Deva | Acoperisuri, Apartamente, Case - Preturi 2026";
const description = "Firme renovari Deva si judetul Hunedoara. Renovari interioare apartamente, acoperisuri noi si reparatii, amenajari complete. Echipe verificate, garantie 3 ani, oferte gratuite in 24h.";
const canonical = "https://www.meseriaslocal.ro/renovari-acoperisuri-deva";

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${canonical}#localbusiness`,
  "name": "Renovari si Acoperisuri Deva | Meserias Local",
  "description": "Servicii profesionale de renovari interioare, exterioare si acoperisuri in Deva si judetul Hunedoara. Echipe verificate cu experienta.",
  "url": canonical,
  "telephone": "+447930097259",
  "areaServed": [
    { "@type": "City", "name": "Deva" },
    { "@type": "AdministrativeArea", "name": "Hunedoara" }
  ],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Platforma Online",
    "addressLocality": "Deva",
    "addressRegion": "Hunedoara",
    "postalCode": "330001",
    "addressCountry": "RO"
  },
  "priceRange": "$$",
  "image": "https://www.meseriaslocal.ro/logo.svg"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Cat costa renovarea unui apartament in Deva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Preturile pentru renovare apartament in Deva pornesc de la 150-200 euro/mp pentru renovare completa (finisaje, instalatii, zugraveli). Renovare partiala: 80-120 euro/mp. Pretul final depinde de suprafata, materialele alese si complexitatea lucrarilor."
      }
    },
    {
      "@type": "Question",
      "name": "Cat costa un acoperis nou in Deva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Un acoperis nou in Deva costa intre 80-150 euro/mp, in functie de tipul invelitorii (tigla metalica, ceramica, sindrila). Include sarpanta, hidroizolatie, jgheaburi si manopera. Pentru o casa de 100mp, bugetul este 8.000-15.000 euro."
      }
    },
    {
      "@type": "Question",
      "name": "Cat dureaza renovarea completa a unui apartament?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Renovarea completa a unui apartament de 2-3 camere in Deva dureaza 4-8 saptamani, in functie de amploarea lucrarilor. Renovare partiala (zugraveli, parchet): 1-2 saptamani. Renovare cu modificari structurale: 8-12 saptamani."
      }
    },
    {
      "@type": "Question",
      "name": "Ce garantie ofera firmele de renovari din Deva?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Firmele verificate din platforma noastra ofera garantie de 2-5 ani pentru lucrari de renovari si acoperisuri. Garantia acopera defecte de executie, infiltratii si probleme aparute din cauza manoperei."
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Acasa", "item": "https://www.meseriaslocal.ro" },
    { "@type": "ListItem", "position": 2, "name": "Servicii", "item": "https://www.meseriaslocal.ro/servicii" },
    { "@type": "ListItem", "position": 3, "name": "Renovari Deva", "item": canonical }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Renovari si Acoperisuri Deva",
  "description": "Servicii complete de renovari interioare, exterioare si acoperisuri in Deva",
  "provider": { "@type": "LocalBusiness", "@id": `${canonical}#localbusiness` },
  "areaServed": { "@type": "City", "name": "Deva" },
  "serviceType": ["Renovari interioare", "Renovari apartamente", "Acoperisuri", "Reparatii acoperis"],
  "url": canonical,
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Servicii renovari Deva",
    "itemListElement": [
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Renovare completa apartament" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Acoperis nou tigla metalica" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Reparatii acoperis" } },
      { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Amenajari interioare" } }
    ]
  }
};

const prices = {
  renovari: [
    { service: "Renovare completa apartament", price: "150-200 euro/mp" },
    { service: "Renovare partiala (finisaje)", price: "80-120 euro/mp" },
    { service: "Zugraveli si vopsitorii", price: "15-25 lei/mp" },
    { service: "Montaj gresie/faianta", price: "50-80 lei/mp" },
    { service: "Montaj parchet laminat", price: "25-40 lei/mp" },
    { service: "Montaj rigips", price: "40-60 lei/mp" }
  ],
  acoperisuri: [
    { service: "Acoperis nou tigla metalica", price: "80-100 euro/mp" },
    { service: "Acoperis tigla ceramica", price: "120-150 euro/mp" },
    { service: "Reparatii acoperis", price: "30-60 euro/mp" },
    { service: "Inlocuire invelitoare", price: "50-80 euro/mp" },
    { service: "Montaj jgheaburi/burlane", price: "40-60 lei/ml" },
    { service: "Hidroizolatie acoperis", price: "25-40 euro/mp" }
  ]
};

const zones = [
  "Deva centru", "Bejan", "Marasti", "Progresul", "Zavoi", "Vulcan", 
  "Petrosani", "Lupeni", "Hunedoara", "Orastie", "Brad", "Simeria"
];
---

<Base title={title} description={description} canonical={canonical} disableDefaultBreadcrumb={true}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(faqSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(serviceSchema)} is:inline></script>
  
  <meta slot="head" name="keywords" content="renovari deva, renovari apartamente deva, acoperisuri deva, firme renovari hunedoara, renovari interioare deva, reparatii acoperis deva, constructii deva, amenajari deva, zugraveli deva, montaj tigla deva" />
  <meta slot="head" name="geo.region" content="RO-HD" />
  <meta slot="head" name="geo.placename" content="Deva, Hunedoara" />

  <!-- Hero Section -->
  <section class="py-12 sm:py-16" style="background: linear-gradient(180deg, #1a1d2e 0%, #1e2235 50%, #252a3d 100%)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <nav class="flex justify-center mb-6">
          <ol class="flex items-center space-x-2 text-slate-300 text-xs font-medium">
            <li><a href="/" class="hover:text-white">Acasa</a></li>
            <li><span class="mx-2 text-white/40">/</span></li>
            <li><a href="/servicii/" class="hover:text-white">Servicii</a></li>
            <li><span class="mx-2 text-white/40">/</span></li>
            <li><span class="text-amber-400 font-semibold">Renovari Deva</span></li>
          </ol>
        </nav>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          Renovari si Acoperisuri Deva – Echipe Profesioniste Hunedoara 2026
        </h1>
        
        <p class="text-xl text-slate-300 mb-4">
          Renovari interioare apartamente si case | Acoperisuri noi si reparatii | Garantie 3 ani
        </p>

        <p class="text-lg text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
          Gaseste echipe verificate pentru renovari complete in Deva si judetul Hunedoara. 
          De la amenajari interioare pana la acoperisuri de la zero. Primesti oferte gratuite 
          de la firme locale cu experienta, fara comisioane.
        </p>

        <div class="flex flex-wrap items-center justify-center gap-4 mb-8">
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">3 ani</div>
            <div class="text-slate-300 text-sm">Garantie lucrari</div>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">24h</div>
            <div class="text-slate-300 text-sm">Oferte gratuite</div>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">100%</div>
            <div class="text-slate-300 text-sm">Echipe verificate</div>
          </div>
        </div>

        <a href={`${APP_URL}/cere-oferta?title=${encodeURIComponent('Renovari Deva')}`}
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-bold rounded-xl hover:from-amber-600 hover:to-orange-600 shadow-lg text-lg">
          Cere oferta gratuita
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- PRO Tradesmen -->
  <section class="bg-gradient-to-b from-slate-50 to-white pt-4">
    <div class="max-w-7xl mx-auto px-4">
      <RecommendedTradesmen
        tradeIds={[1, 6, 7, 8, 10, 12, 14, 15, 16, 50]}
        tradeName="Renovari"
        cityName="Deva"
        supabaseUrl={supabaseUrl}
        supabaseAnonKey={supabaseAnonKey}
        maxResults={4}
        compact={true}
        client:load
      />
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 pt-4 pb-16 sm:pt-6 sm:pb-20">
    <div class="space-y-12">
      
      <!-- Renovari Interioare Section -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Renovari Interioare Deva – Apartamente si Case
        </h2>
        
        <p class="text-slate-700 mb-6 leading-relaxed">
          Echipele noastre din Deva executa <strong>renovari complete</strong> pentru apartamente si case. 
          De la demolari si pregatire pereti pana la finisaje de calitate superioara. Lucram cu materiale 
          de la furnizori locali si nationali, cu garantie extinsa pentru toate lucrarile.
        </p>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Zugraveli si vopsitorii</h3>
            <p class="text-sm text-slate-600">Vopsea lavabila, decorativa, tapet, stucco venetian</p>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Montaj gresie si faianta</h3>
            <p class="text-sm text-slate-600">Bai, bucatarii, holuri, terase, rosturi epoxidice</p>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Parchet si pardoseli</h3>
            <p class="text-sm text-slate-600">Laminat, stratificat, vinil, reconditionare parchet masiv</p>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Rigips si compartimentari</h3>
            <p class="text-sm text-slate-600">Pereti despartitori, tavane false, nise, rafturi</p>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Instalatii sanitare</h3>
            <p class="text-sm text-slate-600">Apa, canalizare, calorifere, boilere, centrale</p>
          </div>
          <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
            <h3 class="font-semibold text-slate-900 mb-2">Instalatii electrice</h3>
            <p class="text-sm text-slate-600">Tablouri, prize, intrerupatoare, iluminat LED</p>
          </div>
        </div>

        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <p class="text-blue-900 font-medium">
            Renovare completa apartament 2 camere in Deva: de la 8.000 euro (materiale + manopera)
          </p>
        </div>
      </section>

      <!-- Acoperisuri Section -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Acoperisuri Deva – Constructii Noi si Reparatii
        </h2>
        
        <p class="text-slate-700 mb-6 leading-relaxed">
          Executam <strong>acoperisuri de la zero</strong> si reparatii pentru case, vile si cladiri 
          in Deva si imprejurimi. Lucram cu toate tipurile de invelitori: tigla metalica, tigla ceramica, 
          sindrila bituminoasa, tabla faltuita. Garantie 5 ani pentru acoperisuri noi.
        </p>

        <div class="grid sm:grid-cols-2 gap-6 mb-6">
          <div>
            <h3 class="font-bold text-slate-900 mb-4">Acoperisuri noi</h3>
            <ul class="space-y-2 text-slate-700">
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Sarpanta din lemn tratat sau metal</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Hidroizolatie si termoizolatie completa</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Tigla metalica Lindab, Bilka, Wetterbest</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Tigla ceramica Bramac, Tondach</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Jgheaburi si burlane din tabla vopsita</span>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="font-bold text-slate-900 mb-4">Reparatii acoperis</h3>
            <ul class="space-y-2 text-slate-700">
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Inlocuire tigle sparte sau lipsa</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Reparatii infiltratii si scurgeri</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Inlocuire jgheaburi ruginite</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Refacere coama si dolii</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-600 mt-1">&#10003;</span>
                <span>Curatare si intretinere acoperis</span>
              </li>
            </ul>
          </div>
        </div>

        <div class="bg-amber-50 rounded-lg p-4 border border-amber-200">
          <p class="text-amber-900 font-medium">
            Acoperis nou casa 100mp in Deva: de la 8.000 euro (tigla metalica) sau 12.000 euro (tigla ceramica)
          </p>
        </div>
      </section>

      <!-- Prices Section -->
      <section class="bg-slate-50 rounded-2xl p-8 border border-slate-200">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Preturi Renovari si Acoperisuri Deva 2026
        </h2>
        
        <div class="grid lg:grid-cols-2 gap-8">
          <div>
            <h3 class="font-bold text-slate-900 mb-4 text-lg">Renovari interioare</h3>
            <div class="space-y-3">
              {prices.renovari.map(item => (
                <div class="flex justify-between items-center p-3 bg-white rounded-lg border border-slate-200">
                  <span class="text-slate-700">{item.service}</span>
                  <span class="font-bold text-green-600">{item.price}</span>
                </div>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-bold text-slate-900 mb-4 text-lg">Acoperisuri</h3>
            <div class="space-y-3">
              {prices.acoperisuri.map(item => (
                <div class="flex justify-between items-center p-3 bg-white rounded-lg border border-slate-200">
                  <span class="text-slate-700">{item.service}</span>
                  <span class="font-bold text-green-600">{item.price}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <p class="text-sm text-slate-500 mt-6">
          Preturile sunt orientative pentru zona Deva si pot varia in functie de complexitatea lucrarii, 
          accesibilitate si materialele alese. Solicita oferta personalizata pentru pret exact.
        </p>
      </section>

      <!-- Zones Section -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Zone Acoperite in Judetul Hunedoara
        </h2>
        
        <p class="text-slate-700 mb-6">
          Echipele noastre de renovari si acoperisuri acopera <strong>Deva si toate localitatile</strong> 
          din judetul Hunedoara. Deplasare gratuita pentru lucrari de peste 2.000 euro.
        </p>

        <div class="flex flex-wrap gap-2">
          {zones.map(zone => (
            <span class="px-3 py-1.5 bg-blue-50 text-blue-800 rounded-lg text-sm font-medium border border-blue-200">
              {zone}
            </span>
          ))}
        </div>
      </section>

      <!-- Why Choose Us -->
      <section class="bg-emerald-50 rounded-2xl p-8 border border-emerald-100">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          De ce sa alegi echipe prin Meserias Local?
        </h2>
        
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">1</div>
            <div>
              <h3 class="font-semibold text-slate-900">Echipe verificate</h3>
              <p class="text-sm text-slate-600">Verificam experienta, portofoliul si recenziile fiecarei echipe</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">2</div>
            <div>
              <h3 class="font-semibold text-slate-900">Oferte gratuite</h3>
              <p class="text-sm text-slate-600">Primesti 3-5 oferte in 24 ore, fara obligatii</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">3</div>
            <div>
              <h3 class="font-semibold text-slate-900">Preturi corecte</h3>
              <p class="text-sm text-slate-600">Compari oferte si alegi cea mai buna varianta</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">4</div>
            <div>
              <h3 class="font-semibold text-slate-900">Garantie lucrari</h3>
              <p class="text-sm text-slate-600">Minim 2 ani garantie pentru toate lucrarile</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">5</div>
            <div>
              <h3 class="font-semibold text-slate-900">Fara comisioane</h3>
              <p class="text-sm text-slate-600">Platesti direct echipa, fara intermediari</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center text-white flex-shrink-0 font-bold">6</div>
            <div>
              <h3 class="font-semibold text-slate-900">Suport dedicat</h3>
              <p class="text-sm text-slate-600">Te ajutam sa gasesti echipa potrivita</p>
            </div>
          </div>
        </div>
      </section>

      <!-- FAQ Section -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Intrebari frecvente despre renovari in Deva
        </h2>
        
        <div class="space-y-4">
          <details class="group bg-slate-50 rounded-lg">
            <summary class="flex items-center justify-between p-4 cursor-pointer font-semibold text-slate-900">
              Cat costa renovarea unui apartament in Deva?
              <span class="text-slate-400 group-open:rotate-180 transition-transform">&#9660;</span>
            </summary>
            <div class="px-4 pb-4 text-slate-700">
              Preturile pentru renovare apartament in Deva pornesc de la 150-200 euro/mp pentru renovare 
              completa (finisaje, instalatii, zugraveli). Renovare partiala: 80-120 euro/mp. Pentru un 
              apartament de 50mp, bugetul este intre 7.500-10.000 euro.
            </div>
          </details>
          
          <details class="group bg-slate-50 rounded-lg">
            <summary class="flex items-center justify-between p-4 cursor-pointer font-semibold text-slate-900">
              Cat costa un acoperis nou in Deva?
              <span class="text-slate-400 group-open:rotate-180 transition-transform">&#9660;</span>
            </summary>
            <div class="px-4 pb-4 text-slate-700">
              Un acoperis nou in Deva costa intre 80-150 euro/mp, in functie de tipul invelitorii. 
              Tigla metalica: 80-100 euro/mp. Tigla ceramica: 120-150 euro/mp. Pentru o casa de 100mp, 
              bugetul este 8.000-15.000 euro, incluzand sarpanta, hidroizolatie si manopera.
