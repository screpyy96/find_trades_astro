---
import Base from '../../layouts/Base.astro';
import { HeroBackground } from '../../components/hero/HeroBackground';
import { TradesmenClientList } from '../../components/tradesman/TradesmenClientList';
import { getPublicSupabaseConfig } from '../../lib/publicEnv';

// APP_URL points to Remix app for login/register/dashboard
const APP_URL = 'https://app.meseriaslocal.ro';

// Get search params from URL
const searchTerm = Astro.url.searchParams.get('q') || '';
const sortMethod = Astro.url.searchParams.get('sort') || 'rating';

const { url: supabaseUrl, anonKey: supabaseAnonKey } = getPublicSupabaseConfig();
---

<Base 
  title="Meseriași Verificați din România | Electricieni, Zugravi, Instalatori | Meserias Local"
  description="Găsești rapid meseriași verificați din România. Mii de profesioniști: electricieni, zugravi, instalatori, constructori. Recenzii reale, oferte gratuite, contact direct."
>
  <!-- Enhanced Schema.org structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Meseriași Verificați din România",
    "description": "Platformă pentru găsirea meseriașilor verificați din România. Electricieni, zugravi, instalatori, constructori și alți specialiști.",
    "url": "https://www.meseriaslocal.ro/meseriasi",
    "inLanguage": "ro-RO",
    "isPartOf": {
      "@type": "WebSite",
      "name": "Meserias Local",
      "url": "https://www.meseriaslocal.ro"
    },
    "about": {
      "@type": "Thing",
      "name": "Servicii de Construcții și Reparații"
    },
    "audience": {
      "@type": "Audience",
      "audienceType": "Clienți din România care caută meseriași"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://www.meseriaslocal.ro/meseriasi/?q={search_term_string}",
      "query-input": "required name=search_term_string"
    },
    "mainEntity": {
      "@type": "ItemList",
      "name": "Meseriași Verificați din România",
      "description": "Lista completă de meseriași verificați și profesioniști din România",
      "numberOfItems": "1000+",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@type": "Person",
            "name": "Electricieni Verificați",
            "jobTitle": "Electrician",
            "description": "Instalații electrice, reparații, mentenanță"
          }
        },
        {
          "@type": "ListItem", 
          "position": 2,
          "item": {
            "@type": "Person",
            "name": "Zugravi Verificați",
            "jobTitle": "Zugrav",
            "description": "Vopsitorie interior/exterior, finisaje"
          }
        },
        {
          "@type": "ListItem",
          "position": 3,
          "item": {
            "@type": "Person",
            "name": "Instalatori Verificați",
            "jobTitle": "Instalator",
            "description": "Instalații sanitare, încălzire, canalizare"
          }
        }
      ]
    },
    "provider": {
      "@type": "Organization",
      "name": "Meserias Local",
      "url": "https://www.meseriaslocal.ro",
      "logo": "https://www.meseriaslocal.ro/icon-192.png",
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "Romanian"
      }
    }
  })} />

  <div class="relative">
    <!-- Hero Section -->
    <div 
      data-navbar-transparent="true"
      class="relative overflow-hidden py-12 lg:py-16 lg:pt-32"
      style="background: linear-gradient(180deg, #1b1f1d 0%, #21251f 50%, #2a302b 100%)"
    >
      <!-- Background decorations -->
      <div class="pointer-events-none absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(120%_90%_at_15%_-10%,rgba(16,185,129,0.35),rgba(4,21,14,0.9)_55%,rgba(2,10,8,0.98)_95%)]"></div>
      </div>

      <!-- Colorful glows -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        <div class="absolute -top-32 -left-28 h-[260px] w-[260px] md:h-[460px] md:w-[460px] rounded-full bg-gradient-to-br from-emerald-400/60 via-emerald-300/15 to-transparent blur-[90px] md:blur-3xl opacity-90"></div>
        <div class="absolute top-8 right-6 h-[200px] w-[200px] md:h-[340px] md:w-[340px] rounded-full bg-gradient-to-bl from-lime-300/45 via-lime-200/15 to-transparent blur-2xl opacity-75"></div>
        <div class="absolute -bottom-48 -right-20 h-[260px] w-[260px] md:h-[380px] md:w-[380px] rounded-full bg-gradient-to-br from-emerald-500/55 via-teal-400/20 to-transparent blur-[110px] opacity-80"></div>
      </div>

      <!-- Animated geometric pattern -->
      <div class="absolute inset-0 opacity-15">
        <div
          class="absolute inset-0"
          style="background-image: linear-gradient(rgba(45, 51, 45, 0.4) 1px, transparent 1px), linear-gradient(90deg, rgba(45, 51, 45, 0.4) 1px, transparent 1px); background-size: 60px 60px"
        ></div>
      </div>

      <!-- Content -->
      <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Heading -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
            Găsește meseriașul potrivit
          </h1>
          <p class="text-lg text-slate-100 mb-8 max-w-2xl mx-auto">
            Mii de profesioniști verificați. Compară recenzii și contactează direct.
          </p>

          <!-- Search Form -->
          <form method="get" action="/meseriasi/" class="max-w-3xl mx-auto mb-6">
            <div class="flex flex-col sm:flex-row gap-3 p-2 bg-white/90 backdrop-blur-sm rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
              <label for="hero-search" class="sr-only">Caută meseriași</label>
              <input
                id="hero-search"
                type="text"
                name="q"
                inputmode="search"
                autocomplete="off"
                placeholder="Caută: electrician, zugrav, instalator, oraș..."
                class="flex-1 rounded-lg border-0 bg-transparent px-4 py-3 text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500 transition-all duration-300"
                value={searchTerm}
              />
              <button
                type="submit"
                class="inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 px-6 py-3 text-white font-semibold focus:outline-none focus:ring-2 focus:ring-amber-500 transition-all duration-300 hover:shadow-lg hover:scale-105 transform"
                aria-label="Caută meseriași"
              >
                <svg class="w-5 h-5 mr-2 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Caută
              </button>
            </div>
          </form>

          <!-- Quick search suggestions -->
          <div class="flex flex-wrap items-center justify-center gap-3 text-sm">
            <span class="text-slate-300 font-medium">Căutări populare:</span>
            <a href="/meseriasi/?q=electrician" class="text-slate-200 hover:text-white underline transition-colors duration-200 hover:underline-offset-2">
              electrician
            </a>
            <span class="text-slate-300">•</span>
            <a href="/meseriasi/?q=zugrav" class="text-slate-200 hover:text-white underline transition-colors duration-200 hover:underline-offset-2">
              zugrav
            </a>
            <span class="text-slate-300">•</span>
            <a href="/meseriasi/?q=instalator" class="text-slate-200 hover:text-white underline transition-colors duration-200 hover:underline-offset-2">
              instalator
            </a>
            <span class="text-slate-300">•</span>
            <a href="/meseriasi/?q=constructor" class="text-slate-200 hover:text-white underline transition-colors duration-200 hover:underline-offset-2">
              constructor
            </a>
            <span class="text-slate-300">•</span>
            <a href="/meseriasi/?q=finisor" class="text-slate-200 hover:text-white underline transition-colors duration-200 hover:underline-offset-2">
              finisor
            </a>
          </div>
          
          <!-- Additional search hints -->
          <div class="mt-6 flex flex-wrap items-center justify-center gap-2 text-xs text-slate-400">
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">+1000 meseriași</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Verificați</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Recenzii reale</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Disponibili rapid</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Tradesmen List - React Component -->
    <section id="lista" class="scroll-mt-20 bg-slate-50">
      <TradesmenClientList 
        client:visible 
        initialSearch={searchTerm}
        initialSort={sortMethod}
        supabaseUrl={supabaseUrl}
        supabaseAnonKey={supabaseAnonKey}
      />
    </section>

    <!-- Loading placeholder for no-JS -->
    <noscript>
      <div class="max-w-7xl mx-auto px-4 pb-16 sm:px-6 lg:px-8">
        <div class="text-center py-16">
          <div class="bg-slate-800/60 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 sm:p-12 max-w-md mx-auto">
            <svg class="w-12 h-12 sm:w-16 sm:h-16 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="text-lg sm:text-xl font-semibold text-white mb-2">Se încarcă...</h3>
            <p class="text-slate-400 text-sm sm:text-base">
              Pentru a vedea meseriașii, te rugăm să activezi JavaScript.
            </p>
          </div>
        </div>
      </div>
    </noscript>
  </div>
</Base>
