---
import Base from '../../layouts/Base.astro';
import { CompaniesClientList } from '../../components/company/CompaniesClientList';
import { getPublicSupabaseConfig } from '../../lib/publicEnv';
import { validateEnvironment } from '../../lib/env-validation';

// Use environment variables from .env
const envConfig = validateEnvironment();
const WEB_URL = envConfig.config.web.url;

// Get search params from URL
const searchTerm = Astro.url.searchParams.get('q') || '';
const sortMethod = Astro.url.searchParams.get('sort') || 'rating';

const { url: supabaseUrl, anonKey: supabaseAnonKey } = getPublicSupabaseConfig();
---

<Base 
  title="Construction and Renovation Companies UK | FindTrades"
  description="Find verified construction, renovation and refurbishment companies in the UK. Professional firms with real reviews and competitive quotes."
>
  <!-- Schema.org structured data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Companii de Construcții și Renovări din România",
    "description": "Platformă pentru găsirea companiilor verificate de construcții și renovări din România.",
    "url": `${WEB_URL}/companies`,
    "inLanguage": "ro-RO",
    "isPartOf": {
      "@type": "WebSite",
      "name": "Meserias Local",
      "url": WEB_URL
    },
    "about": {
      "@type": "Thing",
      "name": "Companii de Construcții și Renovări"
    },
    "potentialAction": {
      "@type": "SearchAction",
      "target": `${WEB_URL}/companies/?q={search_term_string}`,
      "query-input": "required name=search_term_string"
    },
    "provider": {
      "@type": "Organization",
      "name": "Meserias Local",
      "url": WEB_URL,
      "logo": `${WEB_URL}/icon-192.png`
    }
  })} />

  <div class="relative">
    <!-- Hero Section -->
    <div 
      data-navbar-transparent="true"
      class="relative overflow-hidden py-12 lg:py-16 lg:pt-32"
      style="background: linear-gradient(180deg, #1a1f2e 0%, #1e2436 50%, #252d3d 100%)"
    >
      <!-- Background decorations -->
      <div class="pointer-events-none absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(120%_90%_at_15%_-10%,rgba(59,130,246,0.35),rgba(10,15,30,0.9)_55%,rgba(5,10,20,0.98)_95%)]"></div>
      </div>

      <!-- Colorful glows -->
      <div class="pointer-events-none absolute inset-0 overflow-hidden">
        <div class="absolute -top-32 -left-28 h-[260px] w-[260px] md:h-[460px] md:w-[460px] rounded-full bg-gradient-to-br from-blue-400/60 via-blue-300/15 to-transparent blur-[90px] md:blur-3xl opacity-90"></div>
        <div class="absolute top-8 right-6 h-[200px] w-[200px] md:h-[340px] md:w-[340px] rounded-full bg-gradient-to-bl from-indigo-300/45 via-indigo-200/15 to-transparent blur-2xl opacity-75"></div>
        <div class="absolute -bottom-48 -right-20 h-[260px] w-[260px] md:h-[380px] md:w-[380px] rounded-full bg-gradient-to-br from-blue-500/55 via-cyan-400/20 to-transparent blur-[110px] opacity-80"></div>
      </div>

      <!-- Grid pattern -->
      <div class="absolute inset-0 opacity-15">
        <div
          class="absolute inset-0"
          style="background-image: linear-gradient(rgba(45, 51, 65, 0.4) 1px, transparent 1px), linear-gradient(90deg, rgba(45, 51, 65, 0.4) 1px, transparent 1px); background-size: 60px 60px"
        ></div>
      </div>

      <!-- Content -->
      <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-blue-500/20 border border-blue-400/30 rounded-full mb-6">
            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="text-blue-200 text-sm font-medium">Companii Verificate</span>
          </div>

          <!-- Heading -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
            Companii de Construcții și Renovări
          </h1>
          <p class="text-lg text-slate-200 mb-8 max-w-2xl mx-auto">
            Firme verificate cu echipe profesioniste. Proiecte mari, calitate garantată.
          </p>

          <!-- Search Form -->
          <form method="get" action="/companii/" class="max-w-3xl mx-auto mb-6">
            <div class="flex flex-col sm:flex-row gap-3 p-2 bg-white/90 backdrop-blur-sm rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
              <label for="hero-search" class="sr-only">Caută companii</label>
              <input
                id="hero-search"
                type="text"
                name="q"
                inputmode="search"
                autocomplete="off"
                placeholder="Caută: construcții, renovări, amenajări, oraș..."
                class="flex-1 rounded-lg border-0 bg-transparent px-4 py-3 text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300"
                value={searchTerm}
              />
              <button
                type="submit"
                class="inline-flex items-center justify-center rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 px-6 py-3 text-white font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 hover:shadow-lg hover:scale-105 transform"
                aria-label="Caută companii"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Caută
              </button>
            </div>
          </form>

          <!-- Quick search suggestions - use real categories -->
          <div class="flex flex-wrap items-center justify-center gap-3 text-sm">
            <span class="text-slate-300 font-medium">Categorii populare:</span>
            <a href="/companii/?category=constructii%20%26%20structuri" class="text-slate-200 hover:text-white underline transition-colors duration-200">
              Construcții
            </a>
            <span class="text-slate-300">•</span>
            <a href="/companii/?category=amenajari%20interioare" class="text-slate-200 hover:text-white underline transition-colors duration-200">
              Amenajări Interioare
            </a>
            <span class="text-slate-300">•</span>
            <a href="/companii/?category=instalatii%20%26%20utilitati" class="text-slate-200 hover:text-white underline transition-colors duration-200">
              Instalații
            </a>
            <span class="text-slate-300">•</span>
            <a href="/companii/?city=bucuresti" class="text-slate-200 hover:text-white underline transition-colors duration-200">
              București
            </a>
          </div>
          
          <!-- Stats -->
          <div class="mt-6 flex flex-wrap items-center justify-center gap-2 text-xs text-slate-400">
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Companii verificate</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Echipe profesioniste</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Proiecte mari</span>
            <span class="px-2 py-1 bg-slate-700/30 rounded-full">Garanție lucrări</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Companies List - React Component -->
    <section id="lista" class="scroll-mt-20 relative overflow-hidden bg-slate-50">
      <div class="pointer-events-none absolute inset-0">
        <div class="absolute top-0 left-1/4 h-[200px] w-[200px] rounded-full bg-gradient-to-br from-blue-400/10 to-transparent blur-3xl"></div>
        <div class="absolute top-20 right-1/4 h-[180px] w-[180px] rounded-full bg-gradient-to-bl from-indigo-400/8 to-transparent blur-3xl"></div>
      </div>
      
      <div class="relative z-10">
        <CompaniesClientList 
          client:visible 
          initialSearch={searchTerm}
          initialSort={sortMethod}
          supabaseUrl={supabaseUrl}
          supabaseAnonKey={supabaseAnonKey}
        />
      </div>
    </section>

    <!-- No-JS fallback -->
    <noscript>
      <div class="max-w-7xl mx-auto px-4 pb-16 sm:px-6 lg:px-8">
        <div class="text-center py-16">
          <div class="bg-slate-800/60 backdrop-blur-sm border border-slate-700/50 rounded-2xl p-8 sm:p-12 max-w-md mx-auto">
            <svg class="w-12 h-12 sm:w-16 sm:h-16 text-slate-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="text-lg sm:text-xl font-semibold text-white mb-2">Se încarcă...</h3>
            <p class="text-slate-400 text-sm sm:text-base">
              Pentru a vedea companiile, te rugăm să activezi JavaScript.
            </p>
          </div>
        </div>
      </div>
    </noscript>
  </div>
</Base>
