---
import Base from '../layouts/Base.astro';
import { validateEnvironment } from '../lib/env-validation';

const envConfig = validateEnvironment();
const APP_URL = envConfig.config.app.url;
const WEB_URL = envConfig.config.web.url;

const title = "Support & Contact | FindTrades";
const description = "Contact the FindTrades team for support, questions or suggestions. WhatsApp, email or contact form. We respond within 24 hours.";
const canonical = `${WEB_URL}/support`;

const whatsappNumber = "447930097259";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent('Hello! I have a question about FindTrades.')}`;

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": WEB_URL },
    { "@type": "ListItem", "position": 2, "name": "Support", "item": canonical }
  ]
};

const contactSchema = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "FindTrades Support",
  "description": description,
  "url": canonical,
  "mainEntity": {
    "@type": "Organization",
    "name": "FindTrades",
    "url": WEB_URL,
    "contactPoint": [
      {
        "@type": "ContactPoint",
        "telephone": "+447930097259",
        "contactType": "customer support",
        "availableLanguage": ["Romanian", "English"]
      },
      {
        "@type": "ContactPoint",
        "email": "support@findtrades.app",
        "contactType": "customer support"
      }
    ]
  }
};

const supportTopics = [
  { icon: "üë§", title: "Cont si profil", desc: "Probleme cu contul, parola, setari profil" },
  { icon: "üí≥", title: "Plati si abonamente", desc: "Facturi, abonamente, rambursari" },
  { icon: "üîç", title: "Cautare meseriasi", desc: "Ajutor pentru gasirea profesionistilor" },
  { icon: "‚≠ê", title: "Reviews", desc: "Probleme cu recenzii, raportare" },
  { icon: "üõ°Ô∏è", title: "Siguranta", desc: "Raportare frauda, cont compromis" },
  { icon: "üí°", title: "Sugestii", desc: "Idei pentru imbunatatirea platformei" }
];
---

<Base title={title} description={description} canonical={canonical} disableDefaultBreadcrumb={true}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(contactSchema)} is:inline></script>

  <!-- Hero Section -->
  <section class="py-12 sm:py-16" style="background: linear-gradient(180deg, #1a1d2e 0%, #1e2235 50%, #252a3d 100%)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <nav class="flex justify-center mb-6">
          <ol class="flex items-center space-x-2 text-slate-300 text-xs font-medium">
            <li><a href="/" class="hover:text-white">Acasa</a></li>
            <li><span class="mx-2 text-white/40">/</span></li>
            <li><span class="text-amber-400 font-semibold">Suport</span></li>
          </ol>
        </nav>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6">
          Cum te putem ajuta?
        </h1>
        
        <p class="text-xl text-slate-300 mb-8">
          Echipa noastra iti sta la dispozitie pentru orice intrebare sau problema
        </p>

        <!-- WhatsApp CTA - Primary -->
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center px-8 py-4 bg-[#25D366] hover:bg-[#20bd5a] text-white font-bold rounded-xl shadow-lg text-lg transition-all hover:scale-105">
          <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Scrie-ne pe WhatsApp
        </a>
        
        <p class="text-slate-400 mt-4 text-sm">Raspundem in cateva minute</p>
      </div>
    </div>
  </section>

  <div class="max-w-5xl mx-auto px-4 py-12 sm:py-16">
    
    <!-- Contact Options -->
    <section class="grid md:grid-cols-3 gap-6 mb-16">
      <!-- WhatsApp Card -->
      <a href={whatsappLink} target="_blank" rel="noopener noreferrer" 
        class="p-6 bg-gradient-to-br from-[#25D366] to-[#128C7E] rounded-2xl text-white hover:shadow-xl transition-all hover:scale-[1.02] group">
        <div class="w-14 h-14 bg-white/20 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold mb-2">WhatsApp</h3>
        <p class="text-white/80 text-sm mb-3">Cel mai rapid mod de a ne contacta</p>
        <span class="text-white/90 font-medium">+44 7930 097259</span>
      </a>

      <!-- Email Card -->
      <a href="mailto:support@findtrades.app" 
        class="p-6 bg-white rounded-2xl border border-slate-200 hover:border-blue-300 hover:shadow-xl transition-all hover:scale-[1.02] group">
        <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-blue-200 transition-colors">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 mb-2">Email</h3>
        <p class="text-slate-500 text-sm mb-3">Raspundem in maxim 24 ore</p>
        <span class="text-blue-600 font-medium">support@findtrades.app</span>
      </a>

      <!-- FAQ Card -->
      <a href="/faq/" 
        class="p-6 bg-white rounded-2xl border border-slate-200 hover:border-amber-300 hover:shadow-xl transition-all hover:scale-[1.02] group">
        <div class="w-14 h-14 bg-amber-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-amber-200 transition-colors">
          <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 mb-2">FAQ</h3>
        <p class="text-slate-500 text-sm mb-3">Raspunsuri la intrebari frecvente</p>
        <span class="text-amber-600 font-medium">Vezi toate intrebarile</span>
      </a>
    </section>

    <!-- Support Topics -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-slate-900 mb-6 text-center">Cu ce te putem ajuta?</h2>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {supportTopics.map(topic => (
          <div class="p-5 bg-slate-50 rounded-xl border border-slate-200 hover:border-slate-300 transition-colors">
            <span class="text-2xl mb-3 block">{topic.icon}</span>
            <h3 class="font-semibold text-slate-900 mb-1">{topic.title}</h3>
            <p class="text-sm text-slate-500">{topic.desc}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Response Times -->
    <section class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-2xl p-8 mb-16">
      <h2 class="text-xl font-bold text-slate-900 mb-6 text-center">Timp de raspuns</h2>
      
      <div class="grid sm:grid-cols-3 gap-6 text-center">
        <div>
          <div class="text-3xl font-bold text-green-600 mb-2">5 min</div>
          <div class="text-slate-600">WhatsApp</div>
          <div class="text-xs text-slate-400 mt-1">Luni - Vineri, 9:00 - 18:00</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-blue-600 mb-2">24 ore</div>
          <div class="text-slate-600">Email</div>
          <div class="text-xs text-slate-400 mt-1">Oricand</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-amber-600 mb-2">Instant</div>
          <div class="text-slate-600">FAQ</div>
          <div class="text-xs text-slate-400 mt-1">Raspunsuri automate</div>
        </div>
      </div>
    </section>

    <!-- WhatsApp Big CTA -->
    <section class="bg-gradient-to-br from-[#25D366] to-[#128C7E] rounded-2xl p-8 sm:p-12 text-center text-white">
      <div class="max-w-2xl mx-auto">
        <svg class="w-16 h-16 mx-auto mb-6 opacity-90" fill="currentColor" viewBox="0 0 24 24">
