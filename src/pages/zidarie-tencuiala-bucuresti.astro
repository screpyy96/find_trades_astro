---
import Base from '../layouts/Base.astro';
import { RecommendedTradesmen } from '../components/tradesman/RecommendedTradesmen';
import { getPublicSupabaseConfig } from '../lib/publicEnv';

const { url: supabaseUrl, anonKey: supabaseAnonKey } = getPublicSupabaseConfig();
const APP_URL = 'https://app.meseriaslocal.ro';

// SEO optimizat - title 60 chars, description 155 chars
const title = "Zidarie si Tencuiala Mecanizata Bucuresti | Preturi 2026 Meserias Local";
const description = "Zidari autorizati Bucuresti si Ilfov. Zidarie BCA, caramida, tencuiala mecanizata interior/exterior. Preturi de la 25 lei/mp. Echipe verificate, garantie 3 ani.";
const canonical = "https://www.meseriaslocal.ro/zidarie-tencuiala-bucuresti";

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": `${canonical}#localbusiness`,
  "name": "Zidarie si Tencuiala Bucuresti | Meserias Local",
  "description": description,
  "url": canonical,
  "areaServed": [
    { "@type": "City", "name": "Bucuresti" },
    { "@type": "AdministrativeArea", "name": "Ilfov" }
  ],
  "address": { "@type": "PostalAddress", "addressLocality": "Bucuresti", "addressRegion": "Bucuresti", "addressCountry": "RO" },
  "priceRange": "$$",
  "image": "https://www.meseriaslocal.ro/logo.svg",
  "aggregateRating": { "@type": "AggregateRating", "ratingValue": "4.9", "reviewCount": "847" }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    { 
      "@type": "Question", 
      "name": "Cat costa zidaria din BCA in Bucuresti?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Zidaria din BCA in Bucuresti costa intre 80-120 lei/mp pentru manopera, in functie de grosimea blocurilor (25cm sau 30cm). Pretul include montaj cu adeziv sau mortar, rostuire si verificare nivel. Materialele (BCA, adeziv) se calculeaza separat, aproximativ 50-70 lei/mp. Pentru o casa de 100mp, bugetul total pentru zidarie este de 13.000-19.000 lei." 
      }
    },
    { 
      "@type": "Question", 
      "name": "Cat costa tencuiala mecanizata in Bucuresti?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Tencuiala mecanizata in Bucuresti costa 25-40 lei/mp pentru interior si 35-50 lei/mp pentru exterior. Pretul include aplicare cu pompa profesionala, nivelare si finisare. Pentru suprafete de peste 200mp, pretul scade la 20-30 lei/mp. Minim recomandat: 100mp pentru eficienta maxima." 
      }
    },
    { 
      "@type": "Question", 
      "name": "Care e diferenta intre tencuiala mecanizata si manuala?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Tencuiala mecanizata se aplica cu pompa profesionala si acopera 300-500mp/zi, fata de 30-50mp/zi manual. Ofera uniformitate perfecta, aderenta superioara si pret mai bun la suprafete mari. Tencuiala manuala e potrivita pentru suprafete sub 50mp, zone greu accesibile sau reparatii punctuale." 
      }
    },
    { 
      "@type": "Question", 
      "name": "Cat dureaza zidirea unui perete din BCA?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Un perete de 10mp din BCA se zideste in 1-2 zile de o echipa de 2 zidari. Timpul depinde de grosimea peretelui, numarul de goluri pentru usi/ferestre si conditiile de lucru. Uscarea completa a adezivului dureaza 2-4 saptamani inainte de tencuire." 
      }
    },
    { 
      "@type": "Question", 
      "name": "Ce garantie ofera zidarii pentru lucrari in Bucuresti?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Zidarii verificati din platforma Meserias Local ofera garantie de 3-5 ani pentru lucrari de zidarie si tencuiala. Garantia acopera fisuri, desprinderi, probleme de aderenta si defecte de executie. Toate lucrarile sunt documentate cu contract scris." 
      }
    },
    { 
      "@type": "Question", 
      "name": "Lucrati si in Ilfov, nu doar in Bucuresti?", 
      "acceptedAnswer": { 
        "@type": "Answer", 
        "text": "Da, echipele noastre de zidari acopera toate sectoarele din Bucuresti plus judetul Ilfov: Voluntari, Popesti-Leordeni, Bragadiru, Chitila, Pantelimon, Otopeni, Buftea, Magurele, Chiajna si alte localitati. Deplasare gratuita pentru lucrari de peste 1.000 lei." 
      }
    }
  ]
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Acasa", "item": "https://www.meseriaslocal.ro" },
    { "@type": "ListItem", "position": 2, "name": "Servicii", "item": "https://www.meseriaslocal.ro/servicii" },
    { "@type": "ListItem", "position": 3, "name": "Zidarie Bucuresti", "item": canonical }
  ]
};

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Zidarie si Tencuiala Mecanizata Bucuresti",
  "description": "Servicii profesionale de zidarie si tencuiala mecanizata in Bucuresti si Ilfov. Zidari autorizati, echipamente profesionale, garantie 3 ani.",
  "provider": { "@type": "LocalBusiness", "@id": `${canonical}#localbusiness` },
  "areaServed": [{ "@type": "City", "name": "Bucuresti" }, { "@type": "AdministrativeArea", "name": "Ilfov" }],
  "serviceType": ["Zidarie BCA", "Zidarie caramida", "Tencuiala mecanizata", "Tencuiala manuala", "Tencuieli exterioare", "Compartimentari"],
  "url": canonical,
  "offers": {
    "@type": "AggregateOffer",
    "lowPrice": "25",
    "highPrice": "250",
    "priceCurrency": "RON",
    "offerCount": "12"
  }
};

const prices = {
  zidarie: [
    { service: "Zidarie BCA 25cm", price: "80-100 lei/mp", note: "pereti exteriori" },
    { service: "Zidarie BCA 30cm", price: "90-120 lei/mp", note: "izolatie superioara" },
    { service: "Zidarie caramida plina", price: "100-140 lei/mp", note: "rezistenta maxima" },
    { service: "Zidarie caramida GVP", price: "90-120 lei/mp", note: "goluri verticale" },
    { service: "Compartimentari BCA 10cm", price: "60-80 lei/mp", note: "pereti interiori" },
    { service: "Zidarie piatra naturala", price: "150-250 lei/mp", note: "decorativa" }
  ],
  tencuiala: [
    { service: "Tencuiala mecanizata interior", price: "25-40 lei/mp", note: "minim 100mp" },
    { service: "Tencuiala mecanizata exterior", price: "35-50 lei/mp", note: "minim 100mp" },
    { service: "Tencuiala manuala interior", price: "35-50 lei/mp", note: "suprafete mici" },
    { service: "Tencuiala manuala exterior", price: "45-65 lei/mp", note: "zone dificile" },
    { service: "Tencuiala decorativa", price: "50-80 lei/mp", note: "finisaj final" },
    { service: "Driscuire/gletuit", price: "15-25 lei/mp", note: "pregatire zugraveli" }
  ]
};

const zones = [
  "Sector 1", "Sector 2", "Sector 3", "Sector 4", "Sector 5", "Sector 6",
  "Voluntari", "Popesti-Leordeni", "Bragadiru", "Chitila", "Pantelimon", "Otopeni",
  "Buftea", "Magurele", "Chiajna", "Cornetu", "Domnesti", "Jilava"
];
---

<Base title={title} description={description} canonical={canonical} disableDefaultBreadcrumb={true}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(faqSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} is:inline></script>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(serviceSchema)} is:inline></script>
  
  <meta slot="head" name="keywords" content="zidarie bucuresti, zidari bucuresti, tencuiala mecanizata bucuresti, tencuiala bucuresti, zidarie bca bucuresti, pret zidarie bucuresti, pret tencuiala mecanizata bucuresti, zidari ilfov, tencuieli sector 1, zidari sector 2, zidari sector 3" />
  <meta slot="head" name="geo.region" content="RO-B" />
  <meta slot="head" name="geo.placename" content="Bucuresti" />

  <!-- Hero Section - H1 unic -->
  <section class="py-12 sm:py-16" style="background: linear-gradient(180deg, #1a1d2e 0%, #1e2235 50%, #252a3d 100%)">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <nav class="flex justify-center mb-6">
          <ol class="flex items-center space-x-2 text-slate-300 text-xs font-medium">
            <li><a href="/" class="hover:text-white">Acasa</a></li>
            <li><span class="mx-2 text-white/40">/</span></li>
            <li><a href="/servicii/" class="hover:text-white">Servicii</a></li>
            <li><span class="mx-2 text-white/40">/</span></li>
            <li><span class="text-amber-400 font-semibold">Zidarie Bucuresti</span></li>
          </ol>
        </nav>

        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          Zidarie si Tencuiala Mecanizata Bucuresti – Zidari Autorizati 2026
        </h1>
        
        <p class="text-xl text-slate-300 mb-4">
          Zidarie BCA, caramida, piatra | Tencuiala mecanizata cu pompe profesionale | Toate sectoarele + Ilfov
        </p>

        <p class="text-lg text-slate-300 mb-8 max-w-3xl mx-auto leading-relaxed">
          Platforma de incredere cu peste <strong class="text-white">10.000 utilizatori</strong> si rating <strong class="text-white">4.9/5</strong>. 
          Gaseste zidari verificati pentru lucrari de zidarie si tencuiala in Bucuresti si Ilfov. 
          Primesti 3-5 oferte gratuite in 24 ore, fara comisioane.
        </p>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-4 mb-8">
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">4.9/5</div>
            <div class="text-slate-300 text-sm">Rating platforma</div>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">10.000+</div>
            <div class="text-slate-300 text-sm">Utilizatori</div>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">3 ani</div>
            <div class="text-slate-300 text-sm">Garantie lucrari</div>
          </div>
          <div class="bg-white/10 rounded-lg px-4 py-2">
            <div class="text-amber-400 font-bold text-lg">24h</div>
            <div class="text-slate-300 text-sm">Oferte gratuite</div>
          </div>
        </div>

        <a href={`${APP_URL}/cere-oferta?title=${encodeURIComponent('Zidarie Bucuresti')}`}
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-bold rounded-xl hover:from-amber-600 hover:to-orange-600 shadow-lg text-lg">
          Cere oferta gratuita
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        
        <!-- Micro-copy proces -->
        <div class="mt-6 flex flex-wrap items-center justify-center gap-4 text-sm text-slate-400">
          <span class="flex items-center gap-1"><span class="w-5 h-5 bg-amber-500 rounded-full text-white text-xs flex items-center justify-center">1</span> Completezi formularul</span>
          <span class="flex items-center gap-1"><span class="w-5 h-5 bg-amber-500 rounded-full text-white text-xs flex items-center justify-center">2</span> Primesti 3-5 oferte</span>
          <span class="flex items-center gap-1"><span class="w-5 h-5 bg-amber-500 rounded-full text-white text-xs flex items-center justify-center">3</span> Alegi echipa</span>
        </div>
      </div>
    </div>
  </section>

  <!-- PRO Tradesmen -->
  <section class="bg-gradient-to-b from-slate-50 to-white pt-4">
    <div class="max-w-7xl mx-auto px-4">
      <RecommendedTradesmen
        tradeIds={[5]}
        tradeName="Zidarie si Tencuiala"
        cityName="Bucuresti"
        supabaseUrl={supabaseUrl}
        supabaseAnonKey={supabaseAnonKey}
        maxResults={4}
        compact={true}
        client:load
      />
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 pt-4 pb-16 sm:pt-6 sm:pb-20">
    <div class="space-y-12">
      
      <!-- H2: Zidarie Bucuresti -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Zidarie Bucuresti – BCA, Caramida, Piatra Naturala
        </h2>
        
        <p class="text-slate-700 mb-4 leading-relaxed">
          Echipele noastre de <strong>zidari autorizati din Bucuresti</strong> executa lucrari de zidarie pentru constructii noi, extinderi si compartimentari. Lucram cu toate tipurile de materiale: BCA (beton celular autoclavizat), caramida plina sau cu goluri verticale (GVP), piatra naturala decorativa.
        </p>
        
        <p class="text-slate-700 mb-6 leading-relaxed">
          Fiecare lucrare de zidarie este executata cu atentie la detalii: verificam verticalitatea cu nivela laser, folosim adeziv sau mortar de calitate, respectam grosimile recomandate pentru izolatie termica si fonica. Garantam rezistenta structurala si durabilitate pe termen lung.
        </p>

        <!-- H3: Zidarie BCA -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-slate-900 mb-4">Zidarie BCA Bucuresti – Cel Mai Popular Material</h3>
          
          <p class="text-slate-700 mb-4 leading-relaxed">
            <strong>BCA-ul (betonul celular autoclavizat)</strong> este cel mai folosit material pentru zidarie in Bucuresti si Ilfov datorita raportului excelent calitate-pret. Este usor de manevrat, ofera izolatie termica superioara si se prelucreaza usor pentru trasee de instalatii.
          </p>
          
          <div class="grid sm:grid-cols-2 gap-4 mb-4">
            <div class="p-4 bg-green-50 rounded-lg border border-green-200">
              <h4 class="font-semibold text-green-800 mb-2">Avantaje BCA</h4>
              <ul class="text-sm text-green-700 space-y-1">
                <li>• Izolatie termica excelenta (lambda 0.10-0.12)</li>
                <li>• Usor de prelucrat si taiat</li>
                <li>• Greutate redusa (500-600 kg/mc)</li>
                <li>• Pret accesibil vs caramida</li>
                <li>• Rezistenta buna la foc</li>
              </ul>
            </div>
            <div class="p-4 bg-amber-50 rounded-lg border border-amber-200">
              <h4 class="font-semibold text-amber-800 mb-2">Cand se foloseste</h4>
              <ul class="text-sm text-amber-700 space-y-1">
                <li>• Pereti exteriori case si vile</li>
                <li>• Compartimentari interioare</li>
                <li>• Extinderi si mansardari</li>
                <li>• Constructii noi rezidentiale</li>
                <li>• Cladiri cu max. P+2 etaje</li>
              </ul>
            </div>
          </div>
          
          <p class="text-slate-600 text-sm">
            <strong>Recomandat:</strong> BCA 25cm pentru pereti exteriori in zone cu ierni moderate, BCA 30cm pentru izolatie superioara sau zone mai reci. Pentru compartimentari interioare, BCA 10cm este suficient.
          </p>
        </div>

        <!-- H3: Zidarie Caramida -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-slate-900 mb-4">Zidarie Caramida Bucuresti – Rezistenta Maxima</h3>
          
          <p class="text-slate-700 mb-4 leading-relaxed">
            <strong>Caramida</strong> ramane alegerea preferata pentru constructii care necesita rezistenta structurala maxima. Oferim zidarie din caramida plina (pentru fundatii, soclu, pereti portanti) si caramida cu goluri verticale GVP (pentru pereti exteriori cu izolatie).
          </p>
          
          <div class="grid sm:grid-cols-3 gap-4">
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
              <h4 class="font-semibold text-slate-900 mb-2">Caramida plina</h4>
              <p class="text-sm text-slate-600">Rezistenta maxima, ideala pentru fundatii, soclu si pereti portanti. 100-140 lei/mp manopera.</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
              <h4 class="font-semibold text-slate-900 mb-2">Caramida GVP</h4>
              <p class="text-sm text-slate-600">Goluri verticale pentru izolatie. Pereti exteriori cu termoizolatie buna. 90-120 lei/mp.</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200">
              <h4 class="font-semibold text-slate-900 mb-2">Caramida aparenta</h4>
              <p class="text-sm text-slate-600">Aspect decorativ, nu necesita tencuiala. Garduri, fatade, accente. 120-180 lei/mp.</p>
            </div>
          </div>
        </div>

        <!-- Exemplu lucrare -->
        <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
          <h4 class="font-bold text-blue-900 mb-3">Exemplu lucrare: Zidarie casa 120mp in Sector 3</h4>
          <div class="grid sm:grid-cols-4 gap-4 text-sm">
            <div><span class="text-blue-600 font-medium">Material:</span><br/>BCA 30cm Celco</div>
            <div><span class="text-blue-600 font-medium">Suprafata:</span><br/>180mp pereti</div>
            <div><span class="text-blue-600 font-medium">Durata:</span><br/>12 zile lucratoare</div>
            <div><span class="text-blue-600 font-medium">Cost manopera:</span><br/>18.000 lei</div>
          </div>
        </div>
      </section>

      <!-- H2: Tencuiala Mecanizata Bucuresti -->
      <section class="bg-white rounded-2xl p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-6">
          Tencuiala Mecanizata Bucuresti – Interior si Exterior
        </h2>
        
        <p class="text-slate-700 mb-4 leading-relaxed">
          Oferim servicii de <strong>tencuiala mecanizata in Bucuresti si Ilfov</strong> cu echipamente profesionale (pompe PFT, Putzmeister). Tencuiala mecanizata asigura uniformitate perfecta, aderenta superioara si viteza de executie de 10x mai mare decat tencuiala manuala.
        </p>
        
        <p class="text-slate-700 mb-6 leading-relaxed">
          Procesul de tencuire mecanizata include: pregatirea suprafetei (curatare, grunduire), montarea ghidajelor, aplicarea mortarului cu pompa, nivelarea cu dreptarul si finisarea. Folosim mortare de calitate (Baumit, Knauf, Weber) pentru rezultate durabile.
        </p>

        <!-- H3: Procesul de tencuire mecanizata -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-slate-900 mb-4">Cum Functioneaza Tencuiala Mecanizata</h3>
          
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200 text-center">
              <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold mx-auto mb-3">1</div>
              <h4 class="font-semibold text-slate-900 mb-1">Pregatire</h4>
              <p class="text-xs text-slate-600">Curatare pereti, grunduire, montare ghidaje metalice</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200 text-center">
              <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold mx-auto mb-3">2</div>
              <h4 class="font-semibold text-slate-900 mb-1">Aplicare</h4>
              <p class="text-xs text-slate-600">Mortar aplicat cu pompa profesionala, presiune constanta</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200 text-center">
              <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold mx-auto mb-3">3</div>
              <h4 class="font-semibold text-slate-900 mb-1">Nivelare</h4>
              <p class="text-xs text-slate-600">Tragere cu dreptar pe ghidaje, suprafata perfect plana</p>
            </div>
            <div class="p-4 bg-slate-50 rounded-lg border border-slate-200 text-center">
              <div class="w-10 h-10 bg-amber-500 rounded-full flex items-center justify-center text-white font-bold mx-auto mb-3">4</div>
              <h4 class="font-semibold text-slate-900 mb-1">Finisare</h4>
              <p class="text-xs text-slate-600">Driscuire sau gletuit, gata pentru zugraveli</p>
            </div>
          </div>
        </div>

        <!-- Comparatie mecanizata vs manuala -->
        <div class="mb-8">
          <h3 class="text-xl font-bold text-slate-900 mb-4">Tencuiala Mecanizata vs Manuala – Comparatie</h3>
          
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead>
                <tr class="bg-slate-100">
                  <th class="p-3 text-left font-semibold text-slate-900">Criteriu</th>
                  <th class="p-3 text-left font-semibold text-slate-900">Mecanizata</th>
                  <th class="p-3 text-left font-semibold text-slate-900">Manuala</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-200">
                <tr><td class="p-3 text-slate-700">Viteza</td><td class="p-3 text-green-600 font-medium">300-500 mp/zi</td><td class="p-3 text-slate-600">30-50 mp/zi</td></tr>
                <tr><td class="p-3 text-slate-700">Uniformitate</td><td class="p-3 text-green-600 font-medium">Perfecta</td><td class="p-3 text-slate-600">Variabila</td></tr>
                <tr><td class="p-3 text-slate-700">Aderenta</td><td class="p-3 text-green-600 font-medium">Superioara (presiune)</td><td class="p-3 text-slate-600">Standard</td></tr>
                <tr><td class="p-3 text-slate-700">Pret (100mp+)</td><td class="p-3 text-green-600 font-medium">25-40 lei/mp</td><td class="p-3 text-slate-600">35-50 lei/mp</td></tr>
                <tr><td class="p-3 text-slate-700">Minim recomandat</td><td class="p-3 text-slate-600">100 mp</td><td class="p-3 text-green-600 font-medium">Fara minim</td></tr>
                <tr><td class="p-3 text-slate-700">Zone dificile</td><td class="p-3 text-slate-600">Limitat</td><td class="p-3 text-green-600 font-medium">Flexibil</td></tr>
              </tbody>
            </table>
