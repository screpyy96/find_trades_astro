---
import { Navbar as NavbarReact } from '../ui/Navbar';
import { validateEnvironment } from '../../lib/env-validation';

// Get current path
const currentPath = Astro.url.pathname;

// Use environment variables from .env
const envConfig = validateEnvironment();
const APP_URL = envConfig.config.app.url;
const WEB_URL = envConfig.config.web.url;

// For now, we're not logged in on the static site
// In the future, you could check for auth cookies here
const isLoggedIn = false;
---

// @ts-ignore - client:idle is an Astro directive, not a prop
<NavbarReact 
  client:idle
  isLoggedIn={isLoggedIn}
  currentPath={currentPath}
  appUrl={APP_URL}
  webUrl={WEB_URL}
/>
