---
import { Navbar as NavbarReact } from '../ui/Navbar';

// Get current path
const currentPath = Astro.url.pathname;

// Environment URLs
// APP_URL points to Remix app for login/register/dashboard
// WEB_URL is empty for relative URLs on Astro site
const APP_URL = 'https://app.meseriaslocal.ro';
const WEB_URL = '';

// For now, we're not logged in on the static site
// In the future, you could check for auth cookies here
const isLoggedIn = false;
---

<NavbarReact 
  client:idle
  isLoggedIn={isLoggedIn}
  currentPath={currentPath}
  appUrl={APP_URL}
  webUrl={WEB_URL}
/>
