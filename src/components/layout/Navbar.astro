---
import { Navbar as NavbarReact } from '../ui/Navbar';

// Get current path
const currentPath = Astro.url.pathname;

// Environment URLs
// Use empty strings so all links stay on the same domain (relative URLs)
const APP_URL = '';
const WEB_URL = '';

// For now, we're not logged in on the static site
// In the future, you could check for auth cookies here
const isLoggedIn = false;
---

<NavbarReact 
  client:load
  isLoggedIn={isLoggedIn}
  currentPath={currentPath}
  appUrl={APP_URL}
  webUrl={WEB_URL}
/>
