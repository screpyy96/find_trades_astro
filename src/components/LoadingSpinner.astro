---
// Loading Spinner Component
interface Props {
  size?: 'sm' | 'md' | 'lg'
  text?: string
}

const { size = 'md', text } = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8', 
  lg: 'w-12 h-12'
};

const textSizeClasses = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg'
};
---

<div class="flex items-center justify-center p-8">
  <div class="flex flex-col items-center gap-3">
    <!-- Spinner -->
    <div class={`${sizeClasses[size]} animate-spin rounded-full border-2 border-gray-300 border-t-blue-600`}></div>
    
    <!-- Optional text -->
    {text && (
      <p class={`${textSizeClasses[size]} text-gray-600 font-medium`}>
        {text}
      </p>
    )}
  </div>
</div>
