---
import { appLink } from '../../lib/urls';

interface Trade {
  id: number;
  name: string;
  slug: string;
}

interface Props {
  trades: Trade[];
}

const { trades = [] } = Astro.props;

function normalizeString(value: string): string {
  return value
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "");
}

// Select popular trades
const desiredStems = [
  "electric",   // electrical installations
  "plumbing",   // plumbing installations  
  "painting",   // painting & decorating
  "house",      // house construction
  "carpentry",  // carpentry
  "flooring"    // flooring installation
];

const byId = new Set<number>();
const normalized = trades.map((t) => ({
  ref: t,
  n: normalizeString(`${t.name} ${t.slug || ""}`),
}));

const picks: Trade[] = [];
for (const stem of desiredStems) {
  const match = normalized.find((t) => t.n.includes(stem) && !byId.has(t.ref.id));
  if (match) {
    byId.add(match.ref.id);
    picks.push(match.ref);
  }
}

// Fallback: fill up to 6 with first trades not already included
for (const t of trades) {
  if (picks.length >= 6) break;
  if (!byId.has(t.id)) {
    byId.add(t.id);
    picks.push(t);
  }
}

const popularTrades = picks.slice(0, 6);

