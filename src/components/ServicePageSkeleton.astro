---
// Service Page Loading Skeleton
---

<div class="min-h-screen bg-white">
  <!-- Hero Skeleton -->
  <div class="relative h-96 bg-gradient-to-br from-gray-100 to-gray-200 animate-pulse">
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 h-full flex items-center">
      <div class="max-w-4xl mx-auto text-center w-full">
        <!-- Title skeleton -->
        <div class="h-12 bg-gray-300 rounded-lg w-3/4 mx-auto mb-4 animate-pulse"></div>
        <!-- Subtitle skeleton -->
        <div class="h-6 bg-gray-300 rounded-lg w-1/2 mx-auto mb-8 animate-pulse"></div>
        <!-- CTA skeleton -->
        <div class="h-12 bg-gray-300 rounded-lg w-48 mx-auto animate-pulse"></div>
      </div>
    </div>
  </div>

  <!-- Content Skeleton -->
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main content skeleton -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Section skeleton -->
        <div class="bg-white rounded-2xl p-8 border border-gray-200">
          <div class="h-8 bg-gray-300 rounded-lg w-1/3 mb-6 animate-pulse"></div>
          <div class="space-y-3">
            <div class="h-4 bg-gray-300 rounded w-full animate-pulse"></div>
            <div class="h-4 bg-gray-300 rounded w-5/6 animate-pulse"></div>
            <div class="h-4 bg-gray-300 rounded w-4/5 animate-pulse"></div>
          </div>
        </div>

        <!-- Stats skeleton -->
        <div class="grid grid-cols-3 gap-4">
          {[1, 2, 3].map(() => (
            <div class="bg-white rounded-xl p-6 border border-gray-200 text-center">
              <div class="h-8 bg-gray-300 rounded-lg w-16 mx-auto mb-2 animate-pulse"></div>
              <div class="h-4 bg-gray-300 rounded w-20 mx-auto animate-pulse"></div>
            </div>
          ))}
        </div>
      </div>

      <!-- Sidebar skeleton -->
      <div class="space-y-6">
        <!-- CTA Card skeleton -->
        <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-6 text-white">
          <div class="h-6 bg-blue-400 rounded w-3/4 mb-4 animate-pulse"></div>
          <div class="h-10 bg-blue-400 rounded-lg w-full animate-pulse"></div>
        </div>

        <!-- Info card skeleton -->
        <div class="bg-white rounded-2xl p-6 border border-gray-200">
          <div class="h-6 bg-gray-300 rounded w-1/2 mb-4 animate-pulse"></div>
          <div class="space-y-2">
            <div class="h-4 bg-gray-300 rounded w-full animate-pulse"></div>
            <div class="h-4 bg-gray-300 rounded w-3/4 animate-pulse"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
