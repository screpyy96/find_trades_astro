---
// Service Page Error Boundary Component
interface Props {
  error?: string
  title?: string
  showRetry?: boolean
}

const { 
  error = 'A apărut o eroare neașteptată', 
  title = 'Pagina nu poate fi afișată',
  showRetry = true 
} = Astro.props;
---

<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4">
  <div class="max-w-2xl w-full bg-white rounded-2xl shadow-lg p-8 text-center">
    <!-- Error Icon -->
    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
      </svg>
    </div>

    <!-- Error Title -->
    <h1 class="text-2xl font-bold text-gray-900 mb-4">
      {title}
    </h1>

    <!-- Error Message -->
    <p class="text-gray-600 mb-8 leading-relaxed">
      {error}
    </p>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {showRetry && (
        <button 
          onclick="window.location.reload()" 
          class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg"
        >
          Încearcă din nou
        </button>
      )}
      
      <a 
        href="/servicii" 
        class="px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-colors"
      >
        Vezi toate serviciile
      </a>
    </div>

    <!-- Help Text -->
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-500">
        Dacă problema persistă, te rugăm să ne contactezi la 
        <a href="mailto:contact@findtrades.app" class="text-blue-600 hover:underline">
          contact@findtrades.app
        </a>
      </p>
    </div>
  </div>
</div>
