---
import '../styles/global.css';
import Navbar from '../components/layout/Navbar.astro';
import MobileHeader from '../components/layout/MobileHeader.astro';
import { MobileNavbar } from '../components/layout/MobileNavbar';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
}

const { title, description, canonical, ogImage } = Astro.props;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;
const ogImageURL = ogImage || `${Astro.site}og-image.png`;

// Use empty strings for relative URLs (stay on same domain)
const APP_URL = '';
const WEB_URL = '';
---

<!DOCTYPE html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="ro_RO" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- JSON-LD Breadcrumbs -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Acasă",
          "item": Astro.site
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": title,
          "item": canonicalURL
        }
      ]
    })} />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <!-- Desktop Navbar -->
    <Navbar />
    
    <!-- Mobile Header (simple, just logo) -->
    <MobileHeader />
    
    <!-- Mobile Bottom Navigation -->
    <MobileNavbar client:load currentPath={Astro.url.pathname} appUrl={APP_URL} webUrl={WEB_URL} />
    
    <!-- Add padding: top for navbar (desktop + mobile), bottom for mobile bottom nav -->
    <main class="pt-16 lg:pt-20 pb-24 lg:pb-0">
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t border-gray-200 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="font-bold text-lg mb-4">Meserias Local</h3>
            <p class="text-gray-600 text-sm">Platforma ta de încredere pentru găsirea meseriașilor profesioniști.</p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Link-uri Utile</h4>
            <ul class="space-y-2 text-sm">
              <li><a href="/meseriasi/" class="text-gray-600 hover:text-blue-600">Meseriași</a></li>
              <li><a href="https://app.meseriaslocal.ro/cere-oferta" class="text-gray-600 hover:text-blue-600">Cere Ofertă</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Contact</h4>
            <p class="text-gray-600 text-sm">contact@meseriaslocal.ro</p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-200 text-center text-sm text-gray-600">
          <p>&copy; {new Date().getFullYear()} Meserias Local. Toate drepturile rezervate.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
