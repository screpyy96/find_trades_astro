---
import '../styles/global.css';
import Navbar from '../components/layout/Navbar.astro';
import MobileHeader from '../components/layout/MobileHeader.astro';
import { MobileNavbar } from '../components/layout/MobileNavbar';
import Footer from '../components/layout/Footer.astro';
import Analytics from '../components/analytics/Analytics.astro';
import CookieConsent from '../components/utils/CookieConsent.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  disableDefaultBreadcrumb?: boolean;
}

const { title, description, canonical, ogImage, disableDefaultBreadcrumb = false } = Astro.props;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;
const ogImageURL = ogImage || `${Astro.site}og-image.png`;

// Use empty strings for relative URLs (stay on same domain)
const APP_URL = 'https://app.meseriaslocal.ro';
const WEB_URL = 'https://www.meseriaslocal.ro';

const GTM_ID = import.meta.env.PUBLIC_GTM_ID;

---

<!DOCTYPE html>
<html lang="ro">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Prevent flash of white background -->
    <style>
      html {
        background-color: #0f172a;
      }
      body {
        background-color: white;
      }
    </style>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href={APP_URL} />
    <link rel="preconnect" href={APP_URL} crossorigin />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:locale" content="ro_RO" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="author" content="Meserias Local" />
    <meta name="geo.region" content="RO" />
    <meta name="geo.placename" content="Romania" />
    <meta name="language" content="Romanian" />
    <link rel="alternate" hreflang="ro" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />
    
    {!disableDefaultBreadcrumb && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "AcasÄƒ",
            "item": Astro.site
          },
          {
            "@type": "ListItem",
            "position": 2,
            "name": title,
            "item": canonicalURL
          }
        ]
      })} />
    )}
    
    <!-- Analytics (GTM & Clarity) -->
    <Analytics />
    
    <!-- Global Error Handling -->
    <script>
      window.addEventListener('error', (event) => {
        // In production, send to monitoring service
        if (!import.meta.env.DEV) {
          // Example: sendToMonitoringService(event.error);
        }
      });

      window.addEventListener('unhandledrejection', (event) => {
        // In production, send to monitoring service
        if (!import.meta.env.DEV) {
          // Example: sendToMonitoringService(event.reason);
        }
      });
    </script>
    
    <!-- Additional head content from pages -->
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    {import.meta.env.PROD && GTM_ID && (
      <noscript>
        <iframe
          src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
          height="0"
          width="0"
          style="display:none;visibility:hidden"
          title="Google Tag Manager"
        ></iframe>
      </noscript>
    )}
    
    <!-- Desktop Navbar with loading optimization -->
    <div class="navbar-container">
      <Navbar />
    </div>
    
    <style>
      .navbar-container {
        min-height: 64px;
        background: white;
        border-bottom: 1px solid #e2e8f0;
      }
      @media (max-width: 1024px) {
        .navbar-container {
          display: none;
        }
      }
    </style>
    
    <!-- Mobile Header (simple, just logo) -->
    <MobileHeader />
    
    <!-- Mobile Bottom Navigation -->
    <MobileNavbar client:load currentPath={Astro.url.pathname} appUrl={APP_URL} webUrl={WEB_URL} />
    
    <!-- Add padding: top for mobile header only, bottom for mobile bottom nav -->
    <main class="pt-16 lg:pt-0 pb-24 lg:pb-0">
      <slot />
    </main>
    
    <Footer />
    <div class="h-24 lg:hidden" aria-hidden="true"></div>
    
    <!-- Cookie Consent Banner -->
    <CookieConsent />
  </body>
</html>
